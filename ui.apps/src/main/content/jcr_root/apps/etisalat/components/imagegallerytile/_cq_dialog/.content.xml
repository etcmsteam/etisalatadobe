<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image Gallery Tile"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <tileLayout
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select Tile Layout"
                                                fieldLabel="Select Tile Layout"
                                                name="./tileLayout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <tile
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Tile"
                                                        value="tile"/>
                                                    <slider
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Slider"
                                                        value="slider"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".tilelayout-showhide-target"/>
                                            </tileLayout>
                                            <tileproperties
                                                granite:class="tilelayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <disablepopup
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        checked="{Boolean}false"
                                                        fieldDescription="If checked, Popup will be disabled."
                                                        name="./disablePopup"
                                                        text="Disable Popup"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <imagegallerytilevariations
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Choose Image Gallery Tile variation"
                                                        fieldLabel="Select Image Gallery Tile variation"
                                                        name="./imageGalleryTilevariation">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <large
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Large Tile"
                                                                value="large-tile"/>
                                                            <medium
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Medium Tile"
                                                                value="medium-tile"/>
                                                            <small
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Small Tile"
                                                                value="small-tile"/>
                                                        </items>
                                                    </imagegallerytilevariations>
                                                    <backgroundcolor
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Choose Background Color"
                                                        fieldLabel="Select Background Color"
                                                        name="./backgroundColor">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <bglighterfiller
                                                                jcr:primaryType="nt:unstructured"
                                                                text="BG Lighter Filler"
                                                                value="bg-lighter-filler"/>
                                                            <bgwhiterfiller
                                                                jcr:primaryType="nt:unstructured"
                                                                text="BG White Filler"
                                                                value="bg-white-filler"/>
                                                        </items>
                                                    </backgroundcolor>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="tile"/>
                                            </tileproperties>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <backgroundimage
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Background Image"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <backgroundimage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="BackGround Image Asset"
                                                fileNameParameter="./backGroundImageFileName"
                                                fileReferenceParameter="./backGroundImageFileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./backGroundImageFile"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <backgroundImagetitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="A title to display for the card"
                                                fieldLabel="Background Image Title"
                                                name="./backgroundImageTitle"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </backgroundimage>
                    <popupimage
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Popup Image"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <popupimage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Popup Image Asset"
                                                fileNameParameter="./popupImageFileName"
                                                fileReferenceParameter="./popupImageFileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./popupImageFile"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </popupimage>
                    <thumbnailimage
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Thumbnail Image"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <thumbnailimage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Thumbnail Image Asset"
                                                fileNameParameter="./thumbNailImageFileName"
                                                fileReferenceParameter="./thumbNailImageFileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./thumbNailImageFile"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </thumbnailimage>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
