<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Promo Grid Container"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.dropdown.dialog.multi.values]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <gridcontainerdata
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Promo Container Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <backgroundcolor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/etisalat/components/eandenterprise/commons/editor/dialog/backgroundcolor/backgroundcolor"/>
                            <gridtype
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                defaultValue="mixedpromocard"
                                fieldLabel="Container Layout"
                                name="./gridTemplates">
                                <items jcr:primaryType="nt:unstructured">
                                    <wstpromocard
                                        jcr:primaryType="nt:unstructured"
                                        text="Promo Cards Mixed View"
                                        value="mixedpromocard"/>
                                    <expopromocard
                                        jcr:primaryType="nt:unstructured"
                                        text="Promo Cards Two Column"
                                        value="sizepromocard"/>
                                    <caremalpromocard
                                        jcr:primaryType="nt:unstructured"
                                        text="Promo Cards with Full width"
                                        value="promogridcta"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".gridBoxLayout-showhide-target"/>
                            </gridtype>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Tile Title"
                                fieldLabel="Title"
                                name="./mixedpromoHeadingTitle"/>
                            <titleType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/etisalat/components/eandenterprise/commons/editor/dialog/titetype/titleType"/>
                            <sizepromocard
                                granite:class="gridBoxLayout-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="sizepromocard"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <tiledescription
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceSuperType="etisalat/components/eandenterprise/commons/editor/dialog/rteconfig/text"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldDescription="Add Description"
                                        fieldLabel="Description"
                                        name="./tiledescription"
                                        useFixedInlineToolbar="{Boolean}true"/>
                                </items>
                            </sizepromocard>
                            <ctapromocard
                            granite:class="gridBoxLayout-showhide-target"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="promogridcta"/>
                            <items jcr:primaryType="nt:unstructured">
                                <tiledescription
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="etisalat/components/eandenterprise/commons/editor/dialog/rteconfig/text"
                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                    fieldDescription="Add Description"
                                    fieldLabel="Description"
                                    name="./ctatiledescription"
                                    useFixedInlineToolbar="{Boolean}true"/>
                            </items>
                        </ctapromocard>
                        <descContainer
                            granite:class="gridBoxLayout-showhide-target"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue1="promogridcta"
                                showhidetargetvalue2="sizepromocard"/>
                            <items jcr:primaryType="nt:unstructured">
                                <descriptionParagraphStyle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/paragraphstyle"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldDescription="Choose Paragraph style, By default &quot;Paragraph 2&quot; style will apply to description text"
                                    fieldLabel="Description Paragraph Style"
                                    name="./textStyle"/>
                            </items>
                            </descContainer>
                        </items>
                    </gridcontainerdata>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
