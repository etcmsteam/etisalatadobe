<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Carousel"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.commons.editor.dialog.childreneditor.v1,core.wcm.components.carousel.v1.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_carousel_v1"
    trackingFeature="core-components:carousel:v1">
    <content
        granite:class="cmp-carousel__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                           <carousellayout
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                defaultValue="default"
                                                fieldLabel="Display layout as a"
                                                name="./carouselLayout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Default"
                                                        value="default"/>
                                                    <etisalatherobanner
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Etisalat Hero Banner"
                                                        value="etisalat-hero-banner"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".carousellayout-showhide-target"/>
                                            </carousellayout>
                                            <herobannergroup
                                                granite:class="carousellayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                   <herobannervariation
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select Hero Banner Variation"
                                                        fieldLabel="Hero Banner Variation"
                                                        granite:class="cq-dialog-dropdown-showhide"
                                                        name="./heroBannerVariation">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <wst
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Herobanner 4.0"
                                                                value="herobanner-wst"/>
                                                            <heroimage
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Hero Images"
                                                                value="hero-images"/>					                              
                                                        </items>
                                                        <granite:data
							                                jcr:primaryType="nt:unstructured"
							                                cq-dialog-dropdown-showhide-target=".herovariation-showhide-target"/>
                                                    </herobannervariation>
                                                    <heroImageVariationGroup
		                                                granite:class="herovariation-showhide-target"
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/container">
		                                                <items jcr:primaryType="nt:unstructured">
		                                                  <heroimagevariation
		                                                        jcr:primaryType="nt:unstructured"
		                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
		                                                        fieldDescription="Select Hero Image Variations"
		                                                        fieldLabel="Hero Image Variations"
		                                                        granite:class="cq-dialog-dropdown-showhide"
		                                                        name="./heroImagesVariation">
		                                                        <items jcr:primaryType="nt:unstructured">
		                                                            <iframe
		                                                                jcr:primaryType="nt:unstructured"
		                                                                text="Iframe Banner"
		                                                                value="iframe-banner"/>
		                                                            <herolinks
		                                                                jcr:primaryType="nt:unstructured"
		                                                                text="Variable Color &amp; Links Banner"
		                                                                value="links-banner"/>
		                                                            <ctabanner
		                                                                jcr:primaryType="nt:unstructured"
		                                                                text="Call to Action Banner"
		                                                                value="call-to-action-banner"/>
		                                                            <mediumbanner
		                                                                jcr:primaryType="nt:unstructured"
		                                                                text="Medium Banner"
		                                                                value="medium-banner"/>	
		                                                            <blockchain
		                                                                jcr:primaryType="nt:unstructured"
		                                                                text="Block Chain Ends"
		                                                                value="block-chain-ends"/>						                              
		                                                        </items>
		                                                        <granite:data
									                                jcr:primaryType="nt:unstructured"
									                                cq-dialog-dropdown-showhide-target=".hero-image-variation-showhide-target"/>
	                                                       </heroimagevariation>
	                                                       <heroLinkgroup
				                                                granite:class="hero-image-variation-showhide-target"
				                                                jcr:primaryType="nt:unstructured"
				                                                sling:resourceType="granite/ui/components/coral/foundation/container">
				                                                <items jcr:primaryType="nt:unstructured">
				                                                  <heroimagelink											                            
											                            jcr:primaryType="nt:unstructured"
											                            sling:resourceType="granite/ui/components/coral/foundation/container">
											                            <items jcr:primaryType="nt:unstructured">
											                                <herolinkssection
													                            jcr:primaryType="nt:unstructured"
													                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
													                            composite="{Boolean}true"
													                            fieldLabel="Add Hero Links Section"
													                            validation="multifield-max-4"
													                            required="{Boolean}false">
													                            <field
													                                granite:class="coral-Well"
													                                jcr:primaryType="nt:unstructured"
													                                sling:resourceType="granite/ui/components/coral/foundation/container"
													                                name="./heroLinksSection">
													                                <items jcr:primaryType="nt:unstructured">
													                                    <sectionimage
																		                   jcr:primaryType="nt:unstructured"
																		                   sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
																		                   allowUpload="{Boolean}false"
																		                   autoStart="{Boolean}false"
																		                   class="cq-droptarget"
																		                   fieldLabel="Hero Quick Link Icon Image"
																		                   fieldDescription="Hero Quick Link Icon Image"
																		                   fileNameParameter="./fileName"
																		                   fileReferenceParameter="./iconImage"
																		                   mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
																		                   multiple="{Boolean}false"
																		                   name="./file"														                   
																		                   title="Upload Image Asset"
																		                   uploadUrl="${suffix.path}"
																		                   useHTML5="{Boolean}true"/>										                                   
													                                    <text
												                                            jcr:primaryType="nt:unstructured"
												                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												                                            fieldDescription="Please enter the icon text"
												                                            fieldLabel="Text"
												                                            name="./iconText"/>
													                                    <link
												                                            jcr:primaryType="nt:unstructured"
												                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
												                                            fieldDescription="Please enter the link"
												                                            fieldLabel="Link"
												                                            name="./iconLink"/>
													                                    <linkTarget
												                                            jcr:primaryType="nt:unstructured"
												                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
												                                            fieldDescription="Check to open link in new tab?"
												                                            name="./linkTarget"
												                                            text="Open link in new tab?"
												                                            uncheckedValue="_self"
												                                            value="_blank"/>
													                                </items>
													                            </field>
													                            <granite:data
						                                                            jcr:primaryType="nt:unstructured"
						                                                            max-items="4"/>
													                        </herolinkssection>
											                            </items>											                            
											                        </heroimagelink>
				                                                </items>
				                                                   <granite:data
										                                jcr:primaryType="nt:unstructured"
										                                showhidetargetvalue="links-banner"/>
				                                            </heroLinkgroup>              	                                               
		                                                </items>
		                                                <granite:data
							                                jcr:primaryType="nt:unstructured"
							                                showhidetargetvalue="hero-images"/>
	                                                </heroImageVariationGroup>
	                                                <heroImageInnerPageGroup
		                                                granite:class="herovariation-showhide-target"
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/container">
		                                                <items jcr:primaryType="nt:unstructured">
		                                                  <heroimageinnerpage
				                                                jcr:primaryType="nt:unstructured"
				                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
				                                                checked="{Boolean}false"
				                                                fieldDescription="If checked, this option to show herobanner image as an inner page view."
				                                                fieldLabel="Enable Heroimage inner page view"
				                                                name="./heroImageInnerPageView"
				                                                text="Enable Heroimage inner page view"
				                                                uncheckedValue="false"
				                                                value="true"/>
		                                                </items>
		                                                <granite:data
							                                jcr:primaryType="nt:unstructured"
							                                showhidetargetvalue="herobanner-wst"/>
		                                            </heroImageInnerPageGroup>                                                                                                                                                 
                                                 </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="etisalat-hero-banner"/>
                                            </herobannergroup>                                              
                                            <swiperaction
                                                granite:class="carousellayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <swipercheckbox
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
		                                                checked="{Boolean}false"
		                                                fieldDescription="When checked, carousel will have swiper view"
		                                                name="./carouselswiper"
		                                                text="Check to Enable the slider"
		                                                uncheckedValue="{Boolean}false"
		                                                value="{Boolean}true"/>
                                                 </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="default"/>
                                            </swiperaction>                                                                                            
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
