<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="My Account"
    margin="{Boolean}true"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
        <column
           jcr:primaryType="nt:unstructured"
           sling:resourceType="granite/ui/components/coral/foundation/container">
           <items jcr:primaryType="nt:unstructured">
               <accountlinks
                   jcr:primaryType="nt:unstructured"
                   sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                   composite="{Boolean}true"
                   fieldLabel="Add Account Link(s)">
                   <field
                       jcr:primaryType="nt:unstructured"
                       sling:resourceType="granite/ui/components/coral/foundation/container"
                       name="./accountLinks">
                       <items jcr:primaryType="nt:unstructured">
                           <navigationlabel
                               jcr:primaryType="nt:unstructured"
                               sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                               fieldDescription="Text that will appear for the label."
                               fieldLabel="Link Label"
                               maxlength="{Long}40"
                               name="./navigationLabel"/>
                           <navigationtitle
                               jcr:primaryType="nt:unstructured"
                               sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                               fieldDescription="Alt-Text that will appear for the label."
                               fieldLabel="Link Alt-Text"
                               maxlength="{Long}40"
                               name="./navigationAltText"/>
                           <navigationlinkto
                               jcr:primaryType="nt:unstructured"
                               sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                               fieldDescription="Target URL for when the link is clicked."
                               fieldLabel="Link To"
                               name="./navigationLinkTo"
                               rootPath="/content"/>
                           <file
			                   jcr:primaryType="nt:unstructured"
			                   sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
			                   allowUpload="{Boolean}false"
			                   autoStart="{Boolean}false"
			                   class="cq-droptarget"
			                   fieldLabel="Image Icon"
			                   fieldDescription="Menu Icon image for Mobile View"
			                   fileNameParameter="./fileName"
			                   fileReferenceParameter="./navImagePath"
			                   mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
			                   multiple="{Boolean}false"
			                   name="./file"			                  
			                   title="Upload Image Asset"
			                   uploadUrl="${suffix.path}"
			                   useHTML5="{Boolean}true"/>
                           <subnavigationitems
                               jcr:primaryType="nt:unstructured"
                               sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                               composite="{Boolean}true"
                               fieldLabel="Sub Link Items">
                               <field
                                   jcr:primaryType="nt:unstructured"
                                   sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                   name="./subNavItems">
                                   <items jcr:primaryType="nt:unstructured">
                                       <column
                                           jcr:primaryType="nt:unstructured"
                                           sling:resourceType="granite/ui/components/coral/foundation/container">
                                           <items jcr:primaryType="nt:unstructured">
                                               <label
                                                   jcr:primaryType="nt:unstructured"
                                                   sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                   fieldDescription="Text that will appear for the label."
                                                   fieldLabel="Link Label"
                                                   maxlength="{Long}40"
                                                   name="./subNavLabel"
                                                   required="{Boolean}true"/>
                                               <title
                                                   jcr:primaryType="nt:unstructured"
                                                   sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                   fieldDescription="The alt text for Accessibility. This text will appear when the mouse hovers over the link."
                                                   fieldLabel="Link Alt-Text"
                                                   maxlength="{Long}40"
                                                   name="./subNavTitle"
                                                   required="{Boolean}true"/>
                                               <labelpath
                                                   jcr:primaryType="nt:unstructured"
                                                   sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                   fieldDescription="Target URL for when the link is clicked."
                                                   fieldLabel="Link To"
                                                   maxlength="{Long}40"
                                                   name="./subNavLinkTo"
                                                   required="{Boolean}true"
                                                   rootPath="/content"/>
                                           </items>
                                       </column>
                                   </items>
                               </field>
                           </subnavigationitems>
                       </items>
                   </field>
               </accountlinks>
           </items>
       </column>
    </items>
</jcr:root>
