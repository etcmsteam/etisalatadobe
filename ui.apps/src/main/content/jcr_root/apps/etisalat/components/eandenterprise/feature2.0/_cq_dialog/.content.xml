<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Features 2.0"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.dropdown.dialog.multi.values]">
    <content
        granite:class="cmp-teaser__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[text,actions]">
                    <featuredetails
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Feature Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <featurelayout
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Display Variation as a"
                                                name="./featureLayout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <featurewithimage
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Feature With Image"
                                                        value="featurewithimage"/>
                                                    <featurewithcta
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Feature With CTA"
                                                        value="featurewithcta"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".featurelayout-showhide-target"/>
                                            </featurelayout>
                                            <featurewithimageGroup
                                                granite:class="featurelayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <featureGroup
                                                        jcr:primaryType="nt:unstructured"
                                                        jcr:title="Feature Deatils"
                                                        sling:resourceType="granite/ui/components/foundation/layouts/collapsible">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <featuredata
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                composite="{Boolean}true"
                                                                fieldLabel="Add Feature Item(s)">
                                                                <field
                                                                    granite:class="coral-Well"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                    name="./featureItems">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <featureTitle
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldDescription="A title to display for feature title."
                                                                            fieldLabel="Feature Title"
                                                                            name="./featureTitle"/>
                                                                        <titleType
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                            fieldDescription="Select Title Style"
                                                                            fieldLabel="Feature Title Style"
                                                                            name="./titleType">
                                                                            <items jcr:primaryType="nt:unstructured">
                                                                                <def
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    text="(default)"
                                                                                    value=""/>
                                                                                <h1
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    text="H1"
                                                                                    value="h1"/>
                                                                                <h2
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    text="H2"
                                                                                    value="h2"/>
                                                                                <h3
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    text="H3"
                                                                                    value="h3"/>
                                                                                <h4
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    text="H4"
                                                                                    value="h4"/>
                                                                                <h5
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    text="H5"
                                                                                    value="h5"/>
                                                                                <h6
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    text="H6"
                                                                                    value="h6"/>
                                                                            </items>
                                                                        </titleType>
                                                                        <descriptionParagraphStyle
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/paragraphstyle"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                            fieldDescription="Choose Paragraph style, By default &quot;Paragraph 3&quot; style will apply to description text"
                                                                            fieldLabel="Description Paragraph Style"
                                                                            name="./textStyle"/>
                                                                        <description
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                                            fieldDescription="Feature Description"
                                                                            fieldLabel="Feature Description"
                                                                            name="./featureDescription"/>
                                                                    </items>
                                                                </field>
                                                            </featuredata>
                                                        </items>
                                                    </featureGroup>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="featurewithimage"/>
                                            </featurewithimageGroup>
                                            <featurewithctaGroup
                                                granite:class="featurelayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <featurestitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Add Features Title"
                                                        fieldLabel="Features Title"
                                                        name="./featureTitle"/>
                                                    <titleType
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Title Style"
                                                        name="./titleType">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <def
                                                                jcr:primaryType="nt:unstructured"
                                                                text="(default)"
                                                                value=""/>
                                                            <h1
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H1"
                                                                value="h1"/>
                                                            <h2
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H2"
                                                                value="h2"/>
                                                            <h3
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H3"
                                                                value="h3"/>
                                                            <h4
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H4"
                                                                value="h4"/>
                                                            <h5
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H5"
                                                                value="h5"/>
                                                            <h6
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H6"
                                                                value="h6"/>
                                                        </items>
                                                    </titleType>
                                                    <descriptionParagraphStyle
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/paragraphstyle"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldDescription="Choose Paragraph style, By default &quot;Paragraph 3&quot; style will apply to description text"
                                                            fieldLabel="Description Paragraph Style"
                                                            name="./textStyle"/>
                                                    <text
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                        fieldDescription="Add Features Description"
                                                        fieldLabel="Features Description"
                                                        name="./featureText"
                                                        useFixedInlineToolbar="{Boolean}true"/>
                                                    <cta
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="etisalat/components/eandenterprise/commons/editor/dialog/cta/cta"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                                        margin="{Boolean}true"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="featurewithcta"/>
                                            </featurewithctaGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </featuredetails>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
