<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Icon Card List"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_title_v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <iconcardlistdata
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Icon Card List"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <iconcardslist
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Icon Card List">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./iconCardList">
                                    <items jcr:primaryType="nt:unstructured">
                                        <cardtitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Icon card title appear on respective card"
                                            fieldLabel="Card Title"
                                            maxlength="{Long}40"
                                            name="./cardTitle"/>
                                        <cardlink
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Icon card link for respective card"
                                            fieldLabel="Card Link"
                                            name="./cardLink"
                                            rootPath="/content"/>
                                        <cardicon
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                            fieldDescription="Choose the Icon for card"
                                            fieldLabel="Select the icon for card"
                                            name="./cardIcon">
                                            <items jcr:primaryType="nt:unstructured">
                                                <option1
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Prepaid"
                                                    value="prepaid"/>
                                                <option2
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Postpaid"
                                                    value="postpaid"/>
                                                <option3
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Visitor Line"
                                                    value="visitorline"/>
                                                <option4
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Roaming"
                                                    value="roaming"/>
                                                <option5
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Vat"
                                                    value="vat"/>
                                                <option6
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Internet"
                                                    value="internet"/>
                                                <option7
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Telephone"
                                                    value="telephone"/>
                                                <option8
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Elife"
                                                    value="elife"/>
                                            </items>
                                        </cardicon>
                                    </items>
                                </field>
                            </iconcardslist>
                        </items>
                    </iconcardlistdata>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
