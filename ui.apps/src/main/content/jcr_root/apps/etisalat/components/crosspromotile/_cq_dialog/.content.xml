<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Cross Promo Tile"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <tiletitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Add Crosspromo Title"
                                                fieldLabel="Title"
                                                name="./tiletitle"/>
											<ctaStyle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                                path="etisalat/components/commons/cta-variations/ctaStyle"/>
                                            <crosspromoctatitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter Crosspromo CTA Title"
                                                fieldLabel="Crosspromo CTA Title"
                                                name="./crossPromoCTATitle"/>
                                            <tileLinkBehavior
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select Tile Link Behavior"
                                                fieldLabel="Tile Link Behavior"
                                                name="./tileLinkBehavior">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <opennewwindow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open In New Window"
                                                        value="opennewwindow"/>
                                                    <opensamewindow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open in Same Window"
                                                        value="opensamewindow"/>
                                                    <linkmodalpopup
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open CTA Link in Modal window"
                                                        value="openmodalwindow"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".linkbehavior-showhide-target"/>
                                            </tileLinkBehavior>
                                            <fragmentlink
                                                granite:class="linkbehavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <fragmentVariationPath
                                                        granite:id="xfPicker"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/experience-fragments/editor/components/xffield"
                                                        fieldDescription="Choose the experience fragment variation to display."
                                                        fieldLabel="Experience Fragment Variation Path"
                                                        filter="folderOrVariant"
                                                        name="./fragmentVariationPath"
                                                        propertyFilter="cq:xfShowInEditor"
                                                        variant="web"/>
                                                    <modalBehavior
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="etisalat/components/commons/modal-popup-variations/modalBehavior"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select Popup Behavior"
                                                        fieldLabel="Popup Behavior"
                                                        name="./modalBehavior"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="openmodalwindow"/>
                                            </fragmentlink>
                                            <tilelinkwindow
                                                granite:class="linkbehavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <crosspromoctalink
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Enter Crosspromo CTA Link."
                                                        fieldLabel="Crosspromo CTA Link"
                                                        name="./crossPromoLinkURL"
                                                        rootPath="/content"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="opensamewindow"
                                                    showhidetargetvalue1="opennewwindow"/>
                                            </tilelinkwindow>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
