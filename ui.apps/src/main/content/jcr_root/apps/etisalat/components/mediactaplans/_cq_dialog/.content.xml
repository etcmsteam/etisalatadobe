<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Media CTA Plans"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_title_v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[text,actions]">
                    <mediaplan
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Plans"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[layout,roleAttribute]">
                                            <mediactatitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Text that will appear for the media Title."
                                                fieldLabel="Title"
                                                name="./mediaCTATitle"/>
                                            <titleType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Title Style"
                                                name="./titleType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <def
                                                        jcr:primaryType="nt:unstructured"
                                                        text="(default)"
                                                        value=""/>
                                                    <h1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H1"
                                                        value="h1"/>
                                                    <h2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H2"
                                                        value="h2"/>
                                                    <h3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H3"
                                                        value="h3"/>
                                                    <h4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H4"
                                                        value="h4"/>
                                                    <h5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H5"
                                                        value="h5"/>
                                                    <h6
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H6"
                                                        value="h6"/>
                                                </items>
                                            </titleType>
                                            <mediasubtitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Text that will appear for the media plan sub Title."
                                                fieldLabel="Sub Title"
                                                name="./mediaSubTitle"/>
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Add Media CTA Description"
                                                fieldLabel="Description"
                                                name="./text"
                                                useFixedInlineToolbar="{Boolean}true"/>
                                            <viewallbenefitslabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Text that will appear for see all label."
                                                fieldLabel="See All Benefits Label"
                                                name="./seeAllLabel"/>
                                            <viewbenefitslink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="See All Benefits Link"
                                                fieldLabel="See All Benefits Link"
                                                name="./viewBenefitsLink"
                                                rootPath="/content"/>
                                            <pricetag
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Price Tag"
                                                sling:resourceType="granite/ui/components/foundation/layouts/collapsible">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <fromtext
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Text that will appear for product price."
                                                        fieldLabel="From Text"
                                                        maxlength="{Long}40"
                                                        name="./fromText"/>
                                                    <productprice
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Text that will appear for product price."
                                                        fieldLabel="Product Price"
                                                        maxlength="{Long}40"
                                                        name="./productPrice"/>
                                                    <productcurrency
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Text that will appear for product currency."
                                                        fieldLabel="Product Currency"
                                                        maxlength="{Long}40"
                                                        name="./productCurrency"/>
                                                </items>
                                            </pricetag>
                                            <autorenewaltext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Text that will appear for auto renewal labeltext. "
                                                fieldLabel="Auto Renewal Text"
                                                name="./autoRenewalText"/>
                                            <viewplan
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Text that will appear for the view plans button text"
                                                fieldLabel="View Plan CTA Text"
                                                name="./viewPlanButtonText"/>
                                            <viewplanlink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="View Plan CTA Link"
                                                fieldLabel="View Plan CTA Link"
                                                name="./viewPlanButtonLink"
                                                rootPath="/content"/>
                                            <viewplanalttext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="The alt text for Accessibility. This text will appear when the mouse hovers over the link."
                                                fieldLabel="View Plan CTA Link Alt Text"
                                                name="./viewPlanAltText"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </mediaplan>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
