<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Guide Tour"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-teaser__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[text,actions,image]">
                    <modaldetails
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Modal Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <tourlayout
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                defaultValue="default"
                                                fieldLabel="Display layout as a"
                                                name="./tourGuideLayout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Default"
                                                        value="default"/>
                                                    <bestguide
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Get Best Guide Tour"
                                                        value="besttourguide"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".guidetourlayout-showhide-target"/>
                                            </tourlayout>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="A title to display as the headline for the Guide Tour Modal."
                                                fieldLabel="Title"
                                                name="./title"/>
                                            <defaultimage
                                                granite:class="guidetourlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <file
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                        allowUpload="{Boolean}false"
                                                        autoStart="{Boolean}false"
                                                        class="cq-droptarget"
                                                        fieldLabel="Image Asset"
                                                        fileNameParameter="./fileName"
                                                        fileReferenceParameter="./fileReference"
                                                        mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                        multiple="{Boolean}false"
                                                        name="./file"
                                                        title="Upload Image Asset"
                                                        uploadUrl="${suffix.path}"
                                                        useHTML5="{Boolean}true"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="default"/>
                                            </defaultimage>
                                            <bestguidedata
                                                granite:class="guidetourlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <guideitem
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Add Best Guide Item(s)"
                                                        validation="multifield-max-3">
                                                        <field
                                                            granite:class="coral-Well"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./bestGuideItems">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <file
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                    allowUpload="{Boolean}false"
                                                                    autoStart="{Boolean}false"
                                                                    class="cq-droptarget"
                                                                    fieldLabel="Best Guide Image Asset"
                                                                    fileNameParameter="./fileName"
                                                                    fileReferenceParameter="./fileReference"
                                                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                    multiple="{Boolean}false"
                                                                    name="./file"
                                                                    title="Upload Best Guide Image Asset"
                                                                    uploadUrl="${suffix.path}"
                                                                    useHTML5="{Boolean}true"/>
                                                                <bestguidetext
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                                    fieldDescription="Text that will appear for best guide tour."
                                                                    fieldLabel="Best Guide Text"
                                                                    name="./bestGuideText"/>
                                                                <imageresourcehidden
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                                    name="./sling:resourceType"
                                                                    value="etisalat/components/image"/>
                                                            </items>
                                                        </field>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            max-items="3"/>
                                                    </guideitem>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="besttourguide"/>
                                            </bestguidedata>
                                            <description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Text that will appear for the main Description."
                                                fieldLabel="PopUp Text "
                                                name="./desc"
                                                useFixedInlineToolbar="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </modaldetails>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
