<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Media CTA Tile"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_title_v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <tileLinkBehavior
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select Tile Link Behavior"
                                                fieldLabel="Tile Link Behavior"
                                                name="./tileLinkBehavior">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideChildren="[youtubemodalpopup]">
                                                    <opennewwindow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open In New Window"
                                                        value="opennewwindow"/>
                                                    <opensamewindow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open in Same Window"
                                                        value="opensamewindow"/>
                                                    <linkmodalpopup
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open CTA Link in Modal window"
                                                        value="openmodalwindow"/>
                                                    <youtubemodalpopup
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open Youtube Link in Modal window"
                                                        value="youtubemodalwindow"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".linkbehavior-showhide-target"/>
                                            </tileLinkBehavior>
                                            <eventGroup
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Event Details"
                                                sling:resourceType="granite/ui/components/foundation/layouts/collapsible">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <nextdrawtitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter Next Draw Title"
                                                        fieldLabel="Next Draw Title"
                                                        name="./nextDrawTitle"/>
                                                    <eventdate
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                        fieldDescription="Select Event Date"
                                                        fieldLabel="Event Date"
                                                        name="./eventDate"/>
                                                </items>
                                            </eventGroup>
                                            <mediaCtaType
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="tiletitle"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                defaultValue="default"
                                                fieldDescription="Select display media cta as a"
                                                fieldLabel="Display Media CTA As a"
                                                name="./mediaCtaType">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".media-cta-tile-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Default"
                                                        value="default"/>
                                                    <twoColumnVideo
                                                        granite:hide="${cqDesign.disableTwoColumnVideo}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="2 Column With Video"
                                                        value="twoColumnVideo"/>
                                                    <threeColumnVideo
                                                        granite:hide="${cqDesign.disableThreeColumnVideo}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="3 Column With Video"
                                                        value="threeColumnVideo"/>
                                                </items>
                                            </mediaCtaType>
                                            <settwoColumnVideo
                                                granite:class="hide media-cta-tile-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="tiletitle"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="twoColumnVideo"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <mediaCtaHeading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Please enter Media CTA Heading"
                                                        fieldLabel="Media CTA Heading"
                                                        name="./mediaCtaHeadingTwoColumnVideo"/>
                                                    <bgColor
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:orderBefore="tiletitle"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select Media CTA Background Color"
                                                        fieldLabel="Select Media CTA Background Color"
                                                        name="./bgColorTwoColumnVideo">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <white
                                                                jcr:primaryType="nt:unstructured"
                                                                text="White"
                                                                value="wh"/>
                                                            <lightSandBrown
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Light Sand Brown"
                                                                value="gr"/>
                                                        </items>
                                                    </bgColor>
                                                    <alignment
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:orderBefore="tiletitle"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select Media Image Alignment"
                                                        fieldLabel="Select Media Image Alignment"
                                                        name="./mediaAlignmentTwoColumnVideo">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <left
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Left"
                                                                value="media-cta-wrapper"/>
                                                            <right
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Right"
                                                                value="media-cta-wrapper col-reverse"/>
                                                        </items>
                                                    </alignment>
                                                    <youtube
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter the video embed URL."
                                                        fieldLabel="Youtube Video Embed URL"
                                                        name="./youTubeUrlTwoColumnVideo"/>
                                                    <play-inplace
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <granite:data jcr:primaryType="nt:unstructured"/>
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <playicon
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                allowUpload="{Boolean}false"
                                                                autoStart="{Boolean}false"
                                                                class="cq-droptarget"
                                                                fieldDescription="Drag &amp; drop the play icon image."
                                                                fieldLabel="Play Icon"
                                                                fileNameParameter="./playIconName"
                                                                fileReferenceParameter="./playIconReferenceTwoColumnVideo"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                multiple="{Boolean}false"
                                                                name="./playIcon"
                                                                title="Upload Image Asset"
                                                                uploadUrl="${suffix.path}"
                                                                useHTML5="{Boolean}true"/>
                                                        </items>
                                                    </play-inplace>
                                                </items>
                                            </settwoColumnVideo>
                                            <setthreeColumnVideo
                                                granite:class="hide media-cta-tile-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="tiletitle"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="threeColumnVideo"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <alignment
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:orderBefore="tiletitle"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select Media Image Alignment"
                                                        fieldLabel="Select Media Image Alignment"
                                                        name="./mediaAlignmentThreeColumnVideo">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <left
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Left"
                                                                value="media-cta-video-4-0"/>
                                                            <right
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Right"
                                                                value="media-cta-video-4-0 flipped"/>
                                                        </items>
                                                    </alignment>
                                                    <youtube
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter the video embed URL."
                                                        fieldLabel="Youtube Video Embed URL"
                                                        name="./youTubeUrlThreeColumnVideo"/>
                                                    <play-inplace
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <granite:data jcr:primaryType="nt:unstructured"/>
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <playicon
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                allowUpload="{Boolean}false"
                                                                autoStart="{Boolean}false"
                                                                class="cq-droptarget"
                                                                fieldDescription="Drag &amp; drop the play icon image."
                                                                fieldLabel="Play Icon"
                                                                fileNameParameter="./playIconName"
                                                                fileReferenceParameter="./playIconReferenceThreeColumnVideo"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                multiple="{Boolean}false"
                                                                name="./playIcon"
                                                                title="Upload Image Asset"
                                                                uploadUrl="${suffix.path}"
                                                                useHTML5="{Boolean}true"/>
                                                        </items>
                                                    </play-inplace>
                                                </items>
                                            </setthreeColumnVideo>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
