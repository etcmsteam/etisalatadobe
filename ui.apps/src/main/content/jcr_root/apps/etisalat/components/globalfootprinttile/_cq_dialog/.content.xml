<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Global Footprint tile"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-teaser__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[text,actions]">
                    <promotiondetails
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Global Footprint Tile Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <maintitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="A Country Title will appear."
                                                fieldLabel="Global Country Title"
                                                name="./countryTitle"/>
                                            <countryflagicon
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Select Country Flag Icon"
                                                name="./countryFlag">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <uae
                                                        jcr:primaryType="nt:unstructured"
                                                        text="UAE"
                                                        value="uae"/>
                                                    <saudiarebia
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Saudi Arabia"
                                                        value="saudiArabia"/>
                                                    <pakistan
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Pakistan"
                                                        value="pakistan"/>
                                                    <egypt
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Egypt"
                                                        value="egypt"/>
                                                    <afghanistan
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Afghanistan"
                                                        value="afghanistan"/>
                                                    <benin
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Benin"
                                                        value="benin"/>
                                                    <burkina
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Burkina"
                                                        value="burkina"/>
                                                    <centralAfricanRepublic
                                                        jcr:primaryType="nt:unstructured"
                                                        text="centralAfricanRepublic"
                                                        value="centralAfricanRepublic"/>
                                                    <ivoryCoast
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Ivory Coast"
                                                        value="ivoryCoast"/>
                                                    <gabon
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Gabon"
                                                        value="gabon"/>
                                                    <mali
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Mali"
                                                        value="mali"/>
                                                    <mauritania
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Mauritania"
                                                        value="mauritania"/>
                                                    <morocco
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Morocco"
                                                        value="morocco"/>
                                                    <nigeria
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Nigeria"
                                                        value="nigeria"/>
                                                    <togo
                                                        jcr:primaryType="nt:unstructured"
                                                        text="togo"
                                                        value="togo"/>
                                                    <chad
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Chad"
                                                        value="chad"/>
                                                </items>
                                            </countryflagicon>
                                            <brand
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="A Country Brand will appear."
                                                fieldLabel="Brand Name"
                                                name="./brand"/>
                                            <since
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Year from since will appear."
                                                fieldLabel="Since From"
                                                name="./since"/>
                                            <population
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="The population of country will appear on tile data."
                                                fieldLabel="Population"
                                                name="./population"/>
                                            <moreinfotitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="A more info Title will appear."
                                                fieldLabel="More Info Title"
                                                name="./moreInfoTitle"/>
                                            <moreinfollink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="More Information Link."
                                                fieldLabel="More Info Link"
                                                name="./moreInfoLink"
                                                rootPath="/content"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </promotiondetails>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
