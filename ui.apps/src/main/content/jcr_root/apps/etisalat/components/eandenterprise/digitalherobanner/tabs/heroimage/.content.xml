<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
    margin="{Boolean}true">
    <items jcr:primaryType="nt:unstructured">
        <columns
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
            margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
                <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <herovariation
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/select"
                          fieldDescription="Select Hero Banner Variation"
                          granite:class="cq-dialog-dropdown-showhide"
                          fieldLabel="Hero Banner Variation"
                          name="./heroBannerVariation">
                          <items jcr:primaryType="nt:unstructured">
                              <herocarousel
                                  jcr:primaryType="nt:unstructured"
                                  text="Herobanner Carousel"
                                  value="herobanner-carousel"/>
                              <heroinnerview
                                  jcr:primaryType="nt:unstructured"
                                  text="Herobanner Inner View"
                                  value="hero-inner-banner"/>					                              
                          </items>
                          <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-dialog-dropdown-showhide-target=".herovariation-showhide-target"/>
                        </herovariation>
                        <imageDisplaybehavior
                            granite:class="cq-dialog-dropdown-showhide cq-dialog-editor-dropdown-tab-showhide"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            defaultValue="image"
                            fieldDescription="Select Variation"
                            fieldLabel="Select Variation"
                            name="./heroDisplayBehavior">
                            <items jcr:primaryType="nt:unstructured">
                                <image
                                    jcr:primaryType="nt:unstructured"
                                    text="Image in background"
                                    value="image"/>
                                <imageviewport
                                    jcr:primaryType="nt:unstructured"
                                    text="Image viewports"
                                    value="image-viewports"/>
                            </items>
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-dialog-dropdown-showhide-target=".heroimagebehavior-showhide-target"/>
                        </imageDisplaybehavior>
                        <backgroundcolor
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldDescription="Select Image background color"
                            fieldLabel="Select Image Background Color"
                            name="./heroBGColor">
                            <items jcr:primaryType="nt:unstructured">
                                <biegelight
                                    jcr:primaryType="nt:unstructured"
                                    text="Gradient Beige Light"
                                    value="gradient-bg-beige-light"/>
                                <beige
                                    jcr:primaryType="nt:unstructured"
                                    text="Gradient Beige"
                                    value="gradient-bg-beige"/>
                                <gradianfilter
                                    jcr:primaryType="nt:unstructured"
                                    text="Gradian Filter"
                                    value="bg-gradian-filter"/>
                                <filter
                                    jcr:primaryType="nt:unstructured"
                                    text="Filter"
                                    value="bg-filter"/>
                                <gradientmaroon
                                    jcr:primaryType="nt:unstructured"
                                    text="Gradient Maroon"
                                    value="gradient-bg-maroon"/>
                                <gradientmaroonlight
                                    jcr:primaryType="nt:unstructured"
                                    text="Gradient Maroon Light"
                                    value="gradient-bg-maroon-light"/>
                                <maroonlight
                                    jcr:primaryType="nt:unstructured"
                                    text="Maroon Light"
                                    value="bg-maroon-light"/>
                            </items>
                        </backgroundcolor>
                        <imageSection
                            granite:class="heroimagebehavior-showhide-target"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                <file
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                    allowUpload="{Boolean}false"
                                    autoStart="{Boolean}false"
                                    class="cq-droptarget"
                                    fieldLabel="Image Asset"
                                    fileNameParameter="./fileName"
                                    fileReferenceParameter="./fileReference"
                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                    multiple="{Boolean}false"
                                    name="./file"
                                    title="Upload Image Asset"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true"/>
                            </items>
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="image"/>
                        </imageSection>
                        <imageviewPortSection
                            granite:class="heroimagebehavior-showhide-target"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                <alt
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                    fieldLabel="View Port Alternative Text"
                                    name="./altTextThreeFourSixViewPorts"/>
                            </items>
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="image-viewports"/>
                        </imageviewPortSection>
                    </items>
                </column>
            </items>
        </columns>
    </items>
</jcr:root>
