<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Teaser Etisalat"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.teaser.v2.editor,cq.dropdown.dialog.tabs.values,cq.dropdown.dialog.multi.values,core.wcm.components.image.v3.editor,core.wcm.components.commons.editor.dialog.pageimagethumbnail.v1]"
    helpPath="https://www.adobe.com/go/aem_cmp_teaser_v2"
    trackingFeature="core-components:teaser:v2">
    <content
        granite:class="cmp-teaser__editor cmp-image__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="image">
					<actions
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Links"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[link,actions]">
                                            <linksNote
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/text"
                                                text="The teaser title, description and image can be inherited from the linked page, or from the page linked in the first call to action. If neither a link nor a call to action is specified, then the title, description and image will be inherited from the current page."/>
                                            <tileLinkBehavior
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select Link Behavior"
                                                fieldLabel="Link Behavior"
                                                name="./tileLinkBehavior">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <link
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link"
                                                        value="linkoption"/>
                                                    <linkmodalpopup
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open CTA Link in Modal window"
                                                        value="openmodalwindow"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".linkbehavior-showhide-target"/>
                                            </tileLinkBehavior>
                                            <linkOptions
                                                granite:class="linkbehavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <link
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                                        path="/mnt/overlay/core/wcm/components/commons/editor/dialog/link/v1/link/edit/link"/>
                                                    <actions
                                                        granite:class="foundation-toggleable cmp-teaser__editor-multifield_actions"
                                                        granite:hide="${cqDesign.actionsDisabled}"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldDescription="Allows to link the teaser to multiple destinations. The page linked in the first call to action is used when inheriting the teaser title, description or image."
                                                        fieldLabel="Call-to-actions">
                                                        <field
                                                            granite:class="cmp-teaser__editor-action"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./actions">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <link
                                                                    granite:class="cmp-teaser__editor-actionField-linkUrl"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                                    emptyText="Link"
                                                                    name="link"
                                                                    required="{Boolean}true"
                                                                    rootPath="/content">
                                                                    <granite:data
                                                                        jcr:primaryType="nt:unstructured"
                                                                        cmp-teaser-v2-dialog-edit-hook="actionLink"/>
                                                                </link>
                                                                <target
                                                                    granite:class="cmp-teaser__editor-actionField-linkTarget"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                    fieldDescription="If checked the link will be opened in a new browser tab."
                                                                    name="./linkTarget"
                                                                    text=""
                                                                    uncheckedValue="_self"
                                                                    value="_blank">
                                                                    <granite:data
                                                                        jcr:primaryType="nt:unstructured"
                                                                        cmp-teaser-v2-dialog-edit-hook="actionTarget"/>
                                                                </target>
                                                                <text
                                                                    granite:class="cmp-teaser__editor-actionField-linkText"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    emptyText="Text"
                                                                    name="text"
                                                                    required="{Boolean}true">
                                                                    <granite:data
                                                                        jcr:primaryType="nt:unstructured"
                                                                        cmp-teaser-v2-dialog-edit-hook="actionTitle"/>
                                                                </text>
                                                            </items>
                                                        </field>
                                                    </actions>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="linkoption"/>
                                            </linkOptions>
                                            <fragmentlink
                                                granite:class="linkbehavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <ctatitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter CTA Title"
                                                        fieldLabel="CTA Title"
                                                        name="./ctaTitle"/>
                                                    <fragmentVariationPath
                                                        granite:id="xfPicker"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/experience-fragments/editor/components/xffield"
                                                        fieldDescription="Choose the experience fragment variation to display."
                                                        fieldLabel="Experience Fragment Variation Path"
                                                        filter="folderOrVariant"
                                                        name="./fragmentVariationPath"
                                                        propertyFilter="cq:xfShowInEditor"
                                                        variant="web"/>
                                                    <modalBehavior
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="etisalat/components/commons/modal-popup-variations/modalBehavior"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select Popup Behavior"
                                                        fieldLabel="Popup Behavior"
                                                        name="./modalBehavior">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            cq-dialog-dropdown-showhide-target=".linkbehavior-showhide-target"/>
                                                    </modalBehavior>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="openmodalwindow"/>
                                            </fragmentlink>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </actions>
                    <text
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Text"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <descriptionGroup
                                                granite:hide="${cqDesign.descriptionHidden}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <description
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                        fieldDescription="A description to display as the subheadline for the teaser."
                                                        fieldLabel="Description"
                                                        name="./jcr:description"
                                                        useFixedInlineToolbar="{Boolean}true"/>
													<enableToolTipDescription
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        checked="{Boolean}false"
                                                        fieldDescription="When checked description will be truncated at 50 words and rest will be displayed in Tooltip "
                                                        name="./enableToolTip"
                                                        text="Enable Tooltip Decription"
                                                        uncheckedValue="{Boolean}false"
                                                        value="{Boolean}true"/>
                                                </items>
                                            </descriptionGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </text>
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imagelayout
                                                granite:class="tabs__show-hide cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Display Image layout as a"
                                                name="./viewPortLayout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <sixviewport
                                                        jcr:primaryType="nt:unstructured"
                                                        text="6 ViewPort"
                                                        value="6-viewport"/>
                                                    <fourviewport
                                                        jcr:primaryType="nt:unstructured"
                                                        text="4 Viewport"
                                                        value="4-viewport"/>
                                                    <threeviewport
                                                        jcr:primaryType="nt:unstructured"
                                                        text="3 Viewport"
                                                        value="3-viewport"/>
                                                    <sinlgeviewport
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Single Image"
                                                        value="1-viewport"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".imageviewportlayout-showhide-target"/>
                                            </imagelayout>
                                            <viewportcontainer
                                                granite:class="imageviewportlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <alt
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                                        fieldLabel="View Port Alternative Text"
                                                        name="./altTextThreeFourSixViewPorts"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="6-viewport"
                                                    showhidetargetvalue1="4-viewport"
                                                    showhidetargetvalue2="3-viewport"/>
                                            </viewportcontainer>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <retinaimage414px
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/etisalat/components/imageetisalatviewport/tabs/retinaimage414px"/>
                    <retinaimage540px
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/etisalat/components/imageetisalatviewport/tabs/retinaimage540px"/>
                    <retinaimage768px
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/etisalat/components/imageetisalatviewport/tabs/retinaimage768px"/>
                    <retinaimage992px
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/etisalat/components/imageetisalatviewport/tabs/retinaimage992px"/>
                    <retinaimage1024px
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/etisalat/components/imageetisalatviewport/tabs/retinaimage1024px"/>
                    <retinaimage1366px
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/etisalat/components/imageetisalatviewport/tabs/retinaimage1336px"/>
                    <retinaimage1440px
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/etisalat/components/imageetisalatviewport/tabs/retinaimage1440px"/>
                    <retinaimage1920px
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/etisalat/components/imageetisalatviewport/tabs/retinaimage1920px"/>
                    <asset
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Asset"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imageFromPageImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="${true}"
                                                fieldDescription="Use the featured image defined in the properties of the linked page, or in the properties of the current page when no link is defined."
                                                name="./imageFromPageImage"
                                                text="Inherit featured image from page"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <pageImageThumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="core/wcm/components/commons/editor/dialog/pageimagethumbnail/v1/pageimagethumbnail"/>
                                            <file
                                                granite:class="cmp-image__editor-file-upload"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./file"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <alternativeGroup
                                                granite:class="cmp-image__editor-alt"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <alt
                                                        granite:class="cmp-image__editor-alt-text"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                                        fieldLabel="Alternative text for accessibility"
                                                        name="./alt"
                                                        required="{Boolean}true"/>
                                                    <altValueFromPageImage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        checked="true"
                                                        fieldDescription="Use the description defined on the referenced asset, or the alternative text defined in the page properties."
                                                        name="./altValueFromPageImage"
                                                        text="Inherit alternative text from page"
                                                        uncheckedValue="false"
                                                        value="{Boolean}true"/>
                                                    <altValueFromDAM
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        checked="${not empty cqDesign.altValueFromDAM ? cqDesign.altValueFromDAM : true}"
                                                        fieldDescription="When checked, populate the image's alt attribute with the value of the dc:description metadata in DAM."
                                                        name="./altValueFromDAM"
                                                        text="Inherit from description of asset"
                                                        uncheckedValue="false"
                                                        value="{Boolean}true"/>
                                                </items>
                                            </alternativeGroup>
                                            <decorative
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="${not empty cqDesign.isDecorative ? cqDesign.isDecorative : false}"
                                                fieldDescription="If the image is mostly decorative and doesn't convey additional meaning to a visitor, then it might be acceptable to not provide an alternative text, which will make the image ignored by assistive technology like screen readers."
                                                name="./isDecorative"
                                                text="Donâ€™t provide an alternative text"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            dep-value="1-viewport"/>
                    </asset>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
