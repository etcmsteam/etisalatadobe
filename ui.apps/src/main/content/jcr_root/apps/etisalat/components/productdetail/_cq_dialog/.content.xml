<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product detail"
    sling:resourceType="cq/gui/components/authoring/dialog"
	extraClientlibs="[cq.dropdown.dialog.multi.values]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <image
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Image Asset"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./file"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </image>
                    <productcategorydata
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Products Category Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <productcategorybuttonlink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Product category CTA link"
                                fieldLabel="Product category CTA link"
                                name="./productCTALink"/>
                            <productcategorybuttontitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Product category CTA title"
                                fieldLabel="Product category CTA title"
                                name="./productCTATitle"/>
                            <mainTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Text that will appear for the main product Title."
                                fieldLabel="Main Product Title"
                                maxlength="{Long}60"
                                name="./mainProductTitle"/>
                            <maintitlestyle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Main Product Title Style"
                                name="./mainTitleStyle">
                                <items jcr:primaryType="nt:unstructured">
                                    <def
                                        jcr:primaryType="nt:unstructured"
                                        text="(default)"
                                        value=""/>
                                    <h1
                                        jcr:primaryType="nt:unstructured"
                                        text="H1"
                                        value="h1"/>
                                    <h2
                                        jcr:primaryType="nt:unstructured"
                                        text="H2"
                                        value="h2"/>
                                    <h3
                                        jcr:primaryType="nt:unstructured"
                                        text="H3"
                                        value="h3"/>
                                    <h4
                                        jcr:primaryType="nt:unstructured"
                                        text="H4"
                                        value="h4"/>
                                    <h5
                                        jcr:primaryType="nt:unstructured"
                                        text="H5"
                                        value="h5"/>
                                    <h6
                                        jcr:primaryType="nt:unstructured"
                                        text="H6"
                                        value="h6"/>
                                </items>
                            </maintitlestyle>
                            <maindescription
                                jcr:primaryType="nt:unstructured"
                                sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Text that will appear for the main product Description."
                                fieldLabel="Main Product Description"
                                name="./mainProductDesc"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <productlisttype
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Build product list using"
                                name="./productListType">
                                <items jcr:primaryType="nt:unstructured">
                                    <static
                                        jcr:primaryType="nt:unstructured"
                                        text="Static List"
                                        value="staticlist"/>
                                    <dynamic
                                        jcr:primaryType="nt:unstructured"
                                        text="Dynamic List"
                                        value="dynamiclist"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".productlist-showhide-target"/>
                            </productlisttype>
                            <staticlist
                                granite:class="productlist-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./productItems">
                                        <items jcr:primaryType="nt:unstructured">
                                          <gridlayout
										        granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"                                                
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                defaultValue="producttile"
                                                fieldLabel="Display layout as a"
                                                name="./tileBoxLayout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <producttile
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Product Tile"
                                                        value="producttile"/>
                                                    <recommendproductplan
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Recommend Product Plan"
                                                        value="recommendproductplan"/>
                                                    <productwithlogocards
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Products with logo cards"
                                                        value="products-with-logo-cards"/>
                                                    <elife
                                                        jcr:primaryType="nt:unstructured"
                                                        text="ELife Plan Tile"
                                                        value="elifeplan"/>
                                                    <devicetile
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Device Tile"
                                                        value="devicetile"/>
                                                    <elifeaddonstile
                                                        jcr:primaryType="nt:unstructured"
                                                        text="ELife AddonsTile"
                                                        value="elifeaddonstile"/>                                                                                                
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".gridlayout-showhide-target"/>                                                
                                            </gridlayout>
                                            <slidecheckbox
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="When checked, populate the tile with the slider."
                                                name="./slider"
                                                text="Checked for Enable the slider"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true"/>
                                            <buttoncheckbox
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="When checked, the hide/show button will be visible."
                                                name="./enableButton"
                                                text="Checked for Enable the hide/show Button"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true"/>
											<producttilefields
                                                granite:class="gridlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <planviewcheckbox
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        checked="{Boolean}false"
                                                        fieldDescription="When checked, populate the plans view"
                                                        name="./planView"
                                                        text="Checked for Enable the Plans View"
                                                        uncheckedValue="{Boolean}false"
                                                        value="{Boolean}true"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="producttile"/>
                                            </producttilefields>
                                            <buttonshowhidelabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Text that will appear on the hide/show button."
                                                fieldLabel="Hide/Show Button Label"
                                                maxlength="{Long}50"
                                                name="./hideShowLabel"/>
                                        </items>
                                    </field>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="staticlist"/>
                            </staticlist>
                            <dynamiclistdetails
                                granite:class="productlist-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <productcategoryid
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Product Category ID"
                                        name="./productCategoryId"/>
                                    <dynamicgridlayout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            defaultValue="dynamicproducttile"
                                            fieldLabel="Type of Dynamic Tile"
                                            name="./dynamictileBoxLayout">
                                        <items jcr:primaryType="nt:unstructured">
                                            <devicetile
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Dynamic Device Tile"
                                                    value="dynamicproducttile"/>
                                            <elife
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Dynamic ELife Plan Tile"
                                                    value="dynamicelifeplan"/>
                                            <bestseller
                                                jcr:primaryType="nt:unstructured"
                                                text="Dynamic Best Seller Cards Tile"
                                                value="bestsellercard"/>
                                        </items>
                                    </dynamicgridlayout>
                                    <flagText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Text that will appear near Country Flag"
                                        fieldLabel="Flag Text"
                                        name="./flagText"/>
                                    <contractText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Text that will appear for Contract Plan Cards"
                                        fieldLabel="Contract Plan Text "
                                        name="./contractText"/>
                                    <noncontractText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Text that will appear for Non Contract Plan Cards"
                                        fieldLabel="Non Contract Plan Text"
                                        name="./noncontractText"/>
                                    <listlayout
                                        jcr:primaryType="nt:unstructured"
                                        granite:class="cq-dialog-dropdown-showhide"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Build list layout with"
                                        name="./listLayout">
                                        <items jcr:primaryType="nt:unstructured">
                                            <loadmore
                                                jcr:primaryType="nt:unstructured"
                                                text="With Button"
                                                value="loadmore"/>
                                            <slider
                                                jcr:primaryType="nt:unstructured"
                                                text="With Slider"
                                                value="slider"/>
                                            <noncontract
                                                jcr:primaryType="nt:unstructured"
                                                text="With NonContract Section"
                                                value="noncontractbutton"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-dropdown-showhide-target=".listlayout-showhide-target"/>
                                    </listlayout>
                                    <buttonlistlayout
                                        granite:class="listlayout-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <loadmorectatext
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Load more CTA Text"
                                            fieldLabel="Load more CTA Text"
                                            name="./loadMoreCTAText">
                                            </loadmorectatext>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="loadmore"
                                            showhidetargetvalue1="noncontractbutton"/>
                                    </buttonlistlayout>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="dynamiclist"/>
                            </dynamiclistdetails>
                        </items>
                    </productcategorydata>
                    <productfilter
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Products Filter"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <filtersEnabled
                                granite:class="cq-dialog-checkbox-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="When checked, enables product filters."
                                name="./productFilterEnabled"
                                text="Enable Product Filters"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-checkbox-showhide-target=".togglefield"/>
                            </filtersEnabled>
                            <filterOptions
                                granite:class="togglefield"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <filterText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Text that will appear for filter section."
                                        fieldLabel="Filter Text"
                                        name="./filterLabel"/>
                                    <filtercategory
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        autocreateTag="{Boolean}true"
                                        fieldDescription="Choose Product Filter Tag Path."
                                        fieldLabel="Product Filter Tag Path"
                                        name="./productFilterTag"
                                        rootPath="/content/cq:tags/etisalat"/>
                                    <applybuttonlabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Apply Button Text"
                                        fieldLabel="Apply Button Text"
                                        name="./applyButtonLabel"/>
                                     <allCategoriesEnabled
		                                granite:class="cq-dialog-checkbox-showhide"
		                                jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
		                                fieldDescription="When checked, all categories product filter option will add."
		                                name="./allCategoryFilterEnabled"
		                                text="Enable All Categories Product Filter"
		                                uncheckedValue="{Boolean}false"
		                                value="{Boolean}true">
		                                <granite:data
		                                    jcr:primaryType="nt:unstructured"
		                                    cq-dialog-checkbox-showhide-target=".categoriesTogglefield"/>
		                            </allCategoriesEnabled>
		                            <allcategoryLabel
		                                granite:class="categoriesTogglefield"
		                                jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/coral/foundation/container">
		                                <items jcr:primaryType="nt:unstructured">
		                                   <applybuttonlabel
		                                        jcr:primaryType="nt:unstructured"
		                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
		                                        fieldDescription="All Categories Filter Text"
		                                        fieldLabel="All Categories Filter Text"
		                                        name="./allCategoriesFilterText"/>
		                                 </items>
		                            </allcategoryLabel>
                                </items>
                            </filterOptions>
                        </items>
                    </productfilter>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
