<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Table"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-carousel__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[metadata]">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <tableoptions
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Create Table"
                                name="./tableSource">
                                <items jcr:primaryType="nt:unstructured">
                                    <rte
                                        jcr:primaryType="nt:unstructured"
                                        text="Using RTE"
                                        value="rte"/>
                                    <csv
                                        jcr:primaryType="nt:unstructured"
                                        text="Using CSV"
                                        value="csv"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".linkbehavior-showhide-target"/>
                            </tableoptions>
                            <rte
                                granite:class="linkbehavior-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <text
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldLabel="Table"
                                        name="./text"
                                        removeSingleParagraphContainer="{Boolean}true"
                                        useFixedInlineToolbar="{Boolean}true"/>
                                    <enableSearch
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Enable Search"
                                        name="./enableSearch"
                                        text="Enable Search"
                                        uncheckedValue="false"
                                        value="true"/>
                                    <sorting
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Make all columns sortable?"
                                        name="./doSorting"
                                        text="Make all columns sortable?"
                                        uncheckedValue="false"
                                        value="true"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="rte"/>
                            </rte>
                            <csv
                                granite:class="linkbehavior-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <csvPath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldLabel="CSV Path"
                                        name="./csvPath"
                                        removeSingleParagraphContainer="{Boolean}true"
                                        rootPath="/content/dam/etisalat"
                                        useFixedInlineToolbar="{Boolean}true"/>
                                    <filterPath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldLabel="Filter CSV Path"
                                        name="./filterCsvPath"
                                        removeSingleParagraphContainer="{Boolean}true"
                                        rootPath="/content/dam/etisalat"
                                        useFixedInlineToolbar="{Boolean}true"/>
                                    <enterColumnNumberToSort
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                        fieldDescription="Enter the number of results per page. If left empty all records will be visible."
                                        fieldLabel="Column number to make sortable"
                                        name="./columnToSort"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="csv"/>
                            </csv>
                            <pageLimit
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                fieldDescription="Enter the number of results per page. If left empty all records will be visible."
                                fieldLabel="Number Of Results "
                                name="./pageLimit"/>
                            <resposivetable
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Mobile Accordion View Not Required?"
                                name="./mobileView"
                                text="Mobile Accordion View Not Required?"
                                uncheckedValue="true"
                                value="false"/>
                            <cssclass
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="HTML class attribute to apply to the table."
                                fieldLabel="Add CSS classes for table"
                                name="./cssClass"/>
                            <id
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="HTML ID attribute to apply to the component."
                                fieldLabel="ID"
                                name="./id"/>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
