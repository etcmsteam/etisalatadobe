<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Top Navigation"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_title_v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <NavigationLinks
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Navigation Links"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <topnavpath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldLabel="Topnav"
                                                required="{Boolean}false">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./topnavlinks">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <label
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Label"
                                                            name="./navigationTitle"
                                                            required="{Boolean}true"/>
                                                        <link
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldLabel="Link"
                                                            name="./navigationLink"
                                                            required="{Boolean}true"
                                                            rootPath="/content"/>
                                                        <active
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            fieldLabel="Active"
                                                            name="./active"
                                                            text="Active"
                                                            uncheckedValue="{Boolean}false"
                                                            value="{Boolean}true"/>
                                                    </items>
                                                </field>
                                            </topnavpath>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </NavigationLinks>
                    <iconlinks
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Icons Section"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <linkswithicons
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldLabel="select icon"
                                                required="{Boolean}false">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./linkswithicons">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <title
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Label"
                                                            name="./navigationTitle"
                                                            required="{Boolean}true"/>
                                                        <link
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldLabel="Link"
                                                            name="./navigationLink"
                                                            required="{Boolean}true"
                                                            rootPath="/content"/>                                                        
										                <navigationImage
										                   jcr:primaryType="nt:unstructured"
										                   sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
										                   allowUpload="{Boolean}false"
										                   autoStart="{Boolean}false"
										                   class="cq-droptarget"
										                   fieldLabel="Image"
										                   fieldDescription="Image"
										                   fileNameParameter="./fileName"
										                   fileReferenceParameter="./navigationImage"
										                   mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
										                   multiple="{Boolean}false"
										                   name="./file"					                   
										                   title="Upload Image Asset"
										                   uploadUrl="${suffix.path}"
										                   useHTML5="{Boolean}true"/>	                                                     
                                                        <openmodalwindow
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Modal Popup Behavior "
                                                            name="./openmodalwindow">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <selectmodalbehavior
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Select Modal Behavior"/>
                                                                <modalwindow
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Our Markets Section Overlay"
                                                                    value="modalwindow"/>
                                                                <accessibilityoverlay
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Accessibility Overlay"
                                                                    value="accessibilityoverlay"/>
                                                            </items>
                                                        </openmodalwindow>
                                                        <fragmentVariationPath
                                                            granite:id="xfPicker"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/experience-fragments/editor/components/xffield"
                                                            fieldDescription="Choose the experience fragment variation to display."
                                                            fieldLabel="Experience Fragment Variation Path"
                                                            filter="folderOrVariant"
                                                            name="./fragmentVariationPath"
                                                            propertyFilter="cq:xfShowInEditor"
                                                            variant="web"/>
                                                    </items>
                                                </field>
                                            </linkswithicons>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML ID attribute to apply to the component."
                                                fieldLabel="ID"
                                                name="./id"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </iconlinks>
                    <languageChange
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Language Navigation"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <siteRoot
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                fieldDescription="The root page of the global language structure."
                                                fieldLabel="Navigation Root"
                                                name="./navigationRoot"
                                                rootPath="/content"/>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML ID attribute to apply to the component."
                                                fieldLabel="ID"
                                                name="./id"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </languageChange>
                    <menuIcon
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Menu Icon"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <menuEnabled
                                granite:class="cq-dialog-checkbox-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="When checked, enables push menu links."
                                name="./pushMenuEnabled"
                                text="Enable Push Menu Icon"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-checkbox-showhide-target=".togglefield"/>
                            </menuEnabled>
                            <menuOptions
                                granite:class="togglefield"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
		                             <topnavpath
		                                 jcr:primaryType="nt:unstructured"
		                                 sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
		                                 composite="{Boolean}true"
		                                 fieldLabel="Add Menu Item(s)"
		                                 required="{Boolean}false">
		                                 <field
		                                     jcr:primaryType="nt:unstructured"
		                                     sling:resourceType="granite/ui/components/coral/foundation/container"
		                                     name="./pushMenuItems">
		                                     <items jcr:primaryType="nt:unstructured">
		                                         <label
		                                             jcr:primaryType="nt:unstructured"
		                                             sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
		                                             fieldLabel="Label"
		                                             name="./navigationTitle"
		                                             required="{Boolean}true"/>
		                                         <link
		                                             jcr:primaryType="nt:unstructured"
		                                             sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
		                                             fieldLabel="Link"
		                                             name="./navigationLink"
		                                             required="{Boolean}true"
		                                             rootPath="/content"/>
		                                         <linktarget
	                                                jcr:primaryType="nt:unstructured"
	                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
	                                                checked="{Boolean}false"
	                                                fieldDescription="If checked, the URL will open in new tab."
	                                                fieldLabel="Open in new tab"
	                                                name="./navigationLinkTarget"
	                                                text="Open in new tab"
	                                                uncheckedValue="false"
	                                                value="true"/>		                                         
		                                     </items>
		                                 </field>
		                            </topnavpath>                                                               
                                </items>
                            </menuOptions>
                        </items>
                    </menuIcon>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
