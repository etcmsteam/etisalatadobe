<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Icon Tile"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
										    <displayiconcardas
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select Tile Layout."
                                                fieldLabel="Display Icon tile as"
                                                name="./displayicontileas">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <icontile
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Icon Tile"
                                                        value="icontile"/>
                                                    <iconcard
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Icon Card Carousel"
                                                        value="iconcardcarousel"/>
													<iconpartnerlogo
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Icon Partner Logo"
                                                        value="iconpartnerlogo"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".icontilelayout-showhide-target"/>
                                            </displayiconcardas>
                                            <icontileitems
                                                granite:class="icontilelayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <tiletitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Add IconTitle"
                                                        fieldLabel="Icon Title"
                                                        name="./tiletitle"/>
                                                    <titleType
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select Title Style"
                                                        fieldLabel="Title Style"
                                                        name="./titleType">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <def
                                                                jcr:primaryType="nt:unstructured"
                                                                text="(default)"
                                                                value=""/>
                                                            <h1
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H1"
                                                                value="h1"/>
                                                            <h2
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H2"
                                                                value="h2"/>
                                                            <h3
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H3"
                                                                value="h3"/>
                                                            <h4
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H4"
                                                                value="h4"/>
                                                            <h5
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H5"
                                                                value="h5"/>
                                                            <h6
                                                                jcr:primaryType="nt:unstructured"
                                                                text="H6"
                                                                value="h6"/>
                                                        </items>
                                                    </titleType>
                                                    <descriptionParagraphStyle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/paragraphstyle"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Choose Paragraph style, By default &quot;Paragraph 3&quot; style will apply to description text"
                                                        fieldLabel="Description Paragraph Style"
                                                        name="./descParagraphStyle"/>
                                                    <text
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                        fieldDescription="Add Tile Description"
                                                        fieldLabel="Tile Description"
                                                        name="./text"
                                                        useFixedInlineToolbar="{Boolean}true"/>
                                                    <cta
                                                        jcr:primaryType="nt:unstructured"
														sling:resourceSuperType="etisalat/components/eandenterprise/commons/editor/dialog/cta/cta"
														sling:resourceType="granite/ui/components/coral/foundation/container"
														margin="{Boolean}true"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="icontile"
                                                    showhidetargetvalue1="iconcardcarousel"/>
                                            </icontileitems>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
