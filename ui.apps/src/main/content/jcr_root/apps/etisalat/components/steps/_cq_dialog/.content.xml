<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Step Tour"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-teaser__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[text,actions,image]">
                    <details
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <steplayout
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                defaultValue="horizontal"
                                                fieldLabel="Display layout as a"
                                                name="./stepsLayout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <horizontal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Horizontal"
                                                        value="horizontal"/>
                                                    <vertical
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Vertical"
                                                        value="vertical"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".steps-behavior-showhide-target"/>
                                            </steplayout>
                                            <horizontalLayout
                                                granite:class="steps-behavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <stepsitem
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        validation="multifield-max-4"
                                                        fieldLabel="Add Steps Item(s)">
                                                        <field
                                                            granite:class="coral-Well"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./horizontalItems">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <state
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                    defaultValue=""
                                                                    fieldLabel="Select the step state."
                                                                    name="./state">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <none
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="None"
                                                                            value=""/>
                                                                        <active
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Active"
                                                                            value="active"/>
                                                                        <complete
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Complete"
                                                                            value="complete"/>
                                                                    </items>
                                                                </state>
                                                                <title
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Text that will appear for respective step."
                                                                    fieldLabel="Title"
                                                                    name="./title"/>
                                                                <description
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
                                                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                    fieldDescription="Step Description"
                                                                    fieldLabel="Step Description"
                                                                    name="./description"
                                                                    useFixedInlineToolbar="{Boolean}true"/>
                                                            </items>
                                                        </field>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            max-items="4"/>
                                                    </stepsitem>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="horizontal"/>
                                            </horizontalLayout>
                                            <VerticalLayout
                                                granite:class="steps-behavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <stepsitem
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Add Steps Item(s)">
                                                        <field
                                                            granite:class="coral-Well"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./verticalItems">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <state
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                    defaultValue=""
                                                                    fieldLabel="Select the step state."
                                                                    name="./state">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <none
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="None"
                                                                            value=""/>
                                                                        <active
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Active"
                                                                            value="active"/>
                                                                        <complete
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Complete"
                                                                            value="complete"/>
                                                                    </items>
                                                                </state>
                                                                <title
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Text that will appear for respective step."
                                                                    fieldLabel="Step Title"
                                                                    name="./title"/>
                                                                <image
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <file
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                            allowUpload="{Boolean}false"
                                                                            autoStart="{Boolean}false"
                                                                            class="cq-droptarget"
                                                                            fieldLabel="Image Asset"
                                                                            fileNameParameter="./fileName"
                                                                            fileReferenceParameter="./fileReference"
                                                                            mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                            multiple="{Boolean}false"
                                                                            name="./file"
                                                                            title="Upload Image Asset"
                                                                            uploadUrl="${suffix.path}"
                                                                            useHTML5="{Boolean}true"/>
                                                                    </items>
                                                                </image>
                                                            </items>
                                                        </field>
                                                    </stepsitem>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="vertical"/>
                                            </VerticalLayout>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </details>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
