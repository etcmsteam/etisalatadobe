<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Swiper Container"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cmp.swiper.container.editor,cq.dropdown.dialog.multi.values]">
    <content
        granite:class="cmp-swiper-container__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[image,text,actions]">
                    <swiperproperties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[layout,roleAttribute]">
                                            <swipercontainertitle                                               
                                                jcr:primaryType="nt:unstructured"
                                                granite:class="swipergridlayout-showhide-target"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                  <layouttitle
	                                                jcr:primaryType="nt:unstructured"
	                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
	                                                fieldDescription="A title to display as the headline for the tile."
	                                                fieldLabel="Title"
	                                                name="./layoutTitle"
	                                                value=""/>
                                                </items>
                                                <granite:data
							                        jcr:primaryType="nt:unstructured"							                        
							                        showhidetargetvalue="default"
							                        showhidetargetvalue1="ewallet-offer"
							                        showhidetargetvalue2="ewallet-all-offer"
							                        showhidetargetvalue3="ewallet-feature"
                                                    showhidetargetvalue4="guide-tour"/>
                                            </swipercontainertitle>                                            
                                            <gridlayout
                                                granite:class="cq-dialog-dropdown-showhide swiper-container-content-displaylayout"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                defaultValue="default"
                                                fieldLabel="Display layout as a"
                                                name="./tileBoxLayout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Default"
                                                        value="default"/>
                                                     <billexplainer
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Bill Explainer"
                                                        value="bill-explainer"/>
                                                    <ewalletoffer
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Ewallet Offer"
                                                        value="ewallet-offer"/>
                                                    <ewalletalloffer
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Ewallet All Offers"
                                                        value="ewallet-all-offer"/>
                                                    <ewalletfeature
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Ewallet Offer Feature Content"
                                                        value="ewallet-feature"/>
                                                    <guidetour
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Guide Tour Modal Popup"
                                                            value="guide-tour"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".swipergridlayout-showhide-target"/>
                                            </gridlayout>
                                            <billExplainerGroup
                                                granite:class="swipergridlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                     <reportcard
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
		                                                defaultValue="default"		                                               
		                                                fieldLabel="Report Card Type"
		                                                name="./swiperReportCardType">
		                                                <items jcr:primaryType="nt:unstructured">		                                                    
		                                                    <billbreakdown
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="Bill Breakdown"
		                                                        value="bill-breakdown"/>
		                                                    <usageservicesbreakdown
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="Usage and Services Breakdown"
		                                                        value="usage-and-services-breakdown"/>
		                                                </items>		                                               
		                                            </reportcard>
		                                            <reportcardtitle							                    
									                    jcr:primaryType="nt:unstructured"
									                    sling:resourceType="granite/ui/components/coral/foundation/container">
									                    <items jcr:primaryType="nt:unstructured">
									                       <sectiontitle
			                                                   jcr:primaryType="nt:unstructured"
			                                                   sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
			                                                   fieldDescription="A title to display as the headline for the bill explainer"
			                                                   fieldLabel="Report Section Title"
			                                                   name="./sectionTitle"/>
									                    </items>							                   
									                 </reportcardtitle>     
                                                    <previous
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Previous Link Label"
                                                        fieldLabel="Previous Link Label"
                                                        name="./prevLinkLbl"/>
                                                    <next
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Next Link Label"
                                                        fieldLabel="Next Link Label"
                                                        name="./nextLinkLbl"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="bill-explainer"/>
                                            </billExplainerGroup>
                                            <guidetour
                                                    granite:class="swipergridlayout-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <guidetourLinkLabel
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="A title to display as the headline for the guide tour modal link label"
                                                            fieldLabel="Guide Tour Modal Link Label"
                                                            name="./guidetourLinkLabel"/>
                                                    <guidetourTitle
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="A title to display as the headline for the guide tour modal popup"
                                                            fieldLabel="Guide Tour Popup Title"
                                                            name="./guidetourTitle"/>
                                                    <titleType
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldDescription="Select title type for Guide Tour Tile"
                                                            fieldLabel="Title Type"
                                                            name="./titleType">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <def
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="(default)"
                                                                    value=""/>
                                                            <h1
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H1"
                                                                    value="h1"/>
                                                            <h2
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H2"
                                                                    value="h2"/>
                                                            <h3
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H3"
                                                                    value="h3"/>
                                                            <h4
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H4"
                                                                    value="h4"/>
                                                            <h5
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H5"
                                                                    value="h5"/>
                                                            <h6
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H6"
                                                                    value="h6"/>
                                                        </items>
                                                    </titleType>
                                                    <previousLink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Previous Link Label"
                                                            fieldLabel="Previous Link Label"
                                                            name="./prevLink"/>
                                                    <nextLink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Next Link Label"
                                                            fieldLabel="Next Link Label"
                                                            name="./nextLink"/>
                                                    <getstartedLink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Get Started Link Label"
                                                            fieldLabel="Get Started Link Label"
                                                            name="./getstartedLink"/>
                                                </items>
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="guide-tour"/>
                                            </guidetour>
                                            <offerviewall
                                                granite:class="swipergridlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <viewall
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="View All Label"
                                                        fieldLabel="View All Label"
                                                        name="./offerViewAll"/>
                                                    <viewalllink
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Target URL for when the link is clicked."
                                                        fieldLabel="View All Link"
                                                        name="./offerViewAllLink"
                                                        rootPath="/content"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="ewallet-offer"/>
                                            </offerviewall>
                                            <offerall
                                                granite:class="swipergridlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <viewall
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="View All Label"
                                                        fieldLabel="View All Label"
                                                        name="./offerAllLabel"/>
                                                    <viewalllink
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Target URL for when the link is clicked."
                                                        fieldLabel="View All Link"
                                                        name="./offerAllLink"
                                                        rootPath="/content"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="ewallet-all-offer"/>
                                            </offerall>
                                            <offerfeatureviewall
                                                granite:class="swipergridlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <viewall
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="View All Label"
                                                        fieldLabel="View All Label"
                                                        name="./offerFeatureViewAll"/>
                                                    <viewalllink
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Target URL for when the link is clicked."
                                                        fieldLabel="View All Link"
                                                        name="./offerFeatureViewAllLink"
                                                        rootPath="/content"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="ewallet-feature"/>
                                            </offerfeatureviewall>
                                            <swiperdesktopcontainer
                                                granite:class="swipergridlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                  <noswapdesktop
	                                                jcr:primaryType="nt:unstructured"
	                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
	                                                checked="{Boolean}false"
	                                                fieldDescription="Toggle to show/hide for swipper on desktop"
	                                                name="./noSwapDesktop"
	                                                text="Hide Desktop Swiper"
	                                                uncheckedValue="{Boolean}false"
	                                                value="{Boolean}true"/>                                                
                                                </items>
                                                 <granite:data
							                        jcr:primaryType="nt:unstructured"							                        
							                        showhidetargetvalue="default"
							                        showhidetargetvalue1="ewallet-offer"
							                        showhidetargetvalue2="ewallet-all-offer"
							                        showhidetargetvalue3="ewallet-feature"/>
                                            </swiperdesktopcontainer>
                                            <containerdisplaybehavior
                                                granite:class="swipergridlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                  <swiperdisplaybehavior
	                                                jcr:primaryType="nt:unstructured"
	                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
	                                                fieldLabel="Scrollbar"
	                                                name="./swiperDisplayBehavior">
	                                                <items jcr:primaryType="nt:unstructured">
	                                                    <hide
	                                                        jcr:primaryType="nt:unstructured"
	                                                        text="Hide"
	                                                        value="false"/>
	                                                    <show
	                                                        jcr:primaryType="nt:unstructured"
	                                                        text="Show"
	                                                        value="true"/>
	                                                </items>
	                                               </swiperdisplaybehavior>
                                                </items>
                                                <granite:data
							                        jcr:primaryType="nt:unstructured"							                        
							                        showhidetargetvalue="default"
							                        showhidetargetvalue1="ewallet-offer"
							                        showhidetargetvalue2="ewallet-all-offer"
							                        showhidetargetvalue3="ewallet-feature"/>
                                            </containerdisplaybehavior>                                                                                                                                    
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML ID attribute to apply to the component."
                                                fieldLabel="ID"
                                                name="./id"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </swiperproperties>
                    <featureimage
                        granite:class="swiper-container-image-tab"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Image Asset"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./file"
                                                required="{Boolean}true"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </featureimage>
                    <featurecontent
                        granite:class="swiper-container-featurecontent-tab"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Feature Offer Content"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <offerlinklabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Add Offer Link Label"
                                                fieldLabel="Offer CTA Label"
                                                name="./ctatext"
                                                required="{Boolean}true"/>
                                            <offerLinkBehavior
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Offer Link Behavior"
                                                name="./tileLinkBehavior">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <opennewwindow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open In New Window"
                                                        value="opennewwindow"/>
                                                    <opensamewindow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Open in Same Window"
                                                        value="opensamewindow"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".linkbehavior-showhide-target"/>
                                            </offerLinkBehavior>
                                            <offerlinknewwindow
                                                granite:class="linkbehavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <tilebuttonlink
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Target URL for when the link is clicked."
                                                        fieldLabel="Offer CTA link"
                                                        name="./tileCTALinkNewWindow"
                                                        rootPath="/content"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="opennewwindow"/>
                                            </offerlinknewwindow>
                                            <offerlinksamewindow
                                                granite:class="linkbehavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <tilebuttonlink
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Target URL for when the link is clicked."
                                                        fieldLabel="Offer CTA link"
                                                        name="./tileCTALinkSameWindow"
                                                        rootPath="/content"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="opensamewindow"/>
                                            </offerlinksamewindow>
                                            <validdate
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                fieldDescription="Offer Valid Date"
                                                fieldLabel="Offer Valid Date"
                                                name="./articleDate"
                                                required="{Boolean}true"/>
                                            <validdatetext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Offer Valid Text"
                                                fieldLabel="Offer Valid Text"
                                                name="./validDateText"
                                                required="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </featurecontent>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
