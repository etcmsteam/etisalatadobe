<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Swiper Container"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.container.v1.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_container_v1"
    trackingFeature="core-components:container:v1">
    <content
        granite:class="cmp-container__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[layout,roleAttribute]">
                                            <layouttitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="A title to display as the headline for the tile."
                                                fieldLabel="Title"
                                                name="./layoutTitle"
                                                value=""/>
                                            <gridlayout
                                                jcr:primaryType="nt:unstructured"
                                                granite:class="cq-dialog-dropdown-showhide"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                defaultValue="default"
                                                fieldLabel="Display layout as a"
                                                name="./gridLayout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Default"
                                                        value="default"/>
                                                    <ewalletoffer
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Ewallet Offer"
                                                        value="ewallet-offer"/>                                                                                                
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".swipergridlayout-showhide-target"/>
                                            </gridlayout>      
                                            <offerviewall
                                                granite:class="swipergridlayout-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <viewall
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="View All Label"                                                        
                                                        fieldLabel="View All Label"
                                                        name="./offerViewAll"/>
                                                    <viewalllink
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Target URL for when the link is clicked."                                                        
                                                        fieldLabel="View All Link"
                                                        name="./offerViewAllLink"
                                                        rootPath="/content"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="ewallet-offer"/>
                                            </offerviewall>                                      
                                            <noswapdesktop
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="Toggle to show/hide for swipper on desktop"
                                                name="./noSwapDesktop"
                                                text="Hide Desktop Swiper"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true"/>
                                            <swiperdisplaybehavior
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Scrollbar"
                                                name="./swiperDisplayBehavior">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <hide
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Hide"
                                                        value="false"/>
                                                    <show
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Show"
                                                        value="true"/>
                                                </items>
                                            </swiperdisplaybehavior>                                            
                                            <accessibilityLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Value of an aria-label attribute for the container, which describes the container content."
                                                fieldLabel="Label"
                                                name="./accessibilityLabel"
                                                value=""/>                                                                               
                                             <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML ID attribute to apply to the component."
                                                fieldLabel="ID"
                                                name="./id"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
