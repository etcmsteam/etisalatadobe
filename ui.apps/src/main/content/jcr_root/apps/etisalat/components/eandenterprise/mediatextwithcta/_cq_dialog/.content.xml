<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Media Text With CTA"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <backgroundvariation
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Background Variation"
                                                name="./backgroundvariation">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <none
                                                        jcr:primaryType="nt:unstructured"
                                                        text="No Background"
                                                        value=""/>
                                                    <beigelight
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Beige Light"
                                                        value="bg-beige-light"/>
                                                    <maroonlight
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Maroon Light"
                                                        value="bg-maroon-light"/>
                                                    <maroon
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Maroon"
                                                        value="bg-maroon"/>
                                                </items>
                                            </backgroundvariation>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Add Title"
                                                fieldLabel="Title"
                                                maxlength="{Long}50"
                                                name="./title"
                                                required="{Boolean}true"/>
                                            <secondarytitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Add Secondary Title"
                                                fieldLabel="Secondary Title"
                                                maxlength="{Long}50"
                                                name="./secondarytitle"/>
                                            <titletype
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select Title Style"
                                                fieldLabel="Title Style"
                                                name="./titleType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <def
                                                        jcr:primaryType="nt:unstructured"
                                                        text="(default)"
                                                        value=""/>
                                                    <h1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H1"
                                                        value="h1"/>
                                                    <h2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H2"
                                                        value="h2"/>
                                                    <h3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H3"
                                                        value="h3"/>
                                                    <h4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H4"
                                                        value="h4"/>
                                                    <h5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H5"
                                                        value="h5"/>
                                                    <h6
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H6"
                                                        value="h6"/>
                                                </items>
                                            </titletype>
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceSuperType="etisalat/components/eandenterprise/commons/editor/dialog/rteconfig/text"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Add Description"
                                                fieldLabel="Description"
                                                name="./text"
                                                useFixedInlineToolbar="{Boolean}true"/>
                                            <descriptionParagraphStyle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/paragraphstyle"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Choose Paragraph style, By default &quot;Paragraph 3&quot; style will apply to description text"
                                                fieldLabel="Description Paragraph Style"
                                                name="./textStyle"/>
                                            <cta
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="CTA Section"
                                                sling:resourceSuperType="etisalat/components/eandenterprise/commons/editor/dialog/cta/cta"
                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                margin="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
