<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Modal Popup"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.dropdown.dialog.multi.values]">
    <content
        granite:class="cmp-teaser__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[text,actions]">
                    <modaldetails
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Modal Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <modalpopuplayout                                                
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                granite:class="cq-dialog-dropdown-showhide"
                                                defaultValue="default"
                                                fieldLabel="Display Variation as a"
                                                name="./modalPopupLayout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Default"
                                                        value="default"/>
                                                    <bestguide
                                                        jcr:primaryType="nt:unstructured"
                                                        text="ELife Context"
                                                        value="elifeContext"/>
                                                    <digitalnotification
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Digital Notification"
                                                        value="digital-notification"/>
                                                </items>   
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".modalpopup-showhide-target"/>                                             
                                            </modalpopuplayout>
                                            <pretitle                                               
                                                jcr:primaryType="nt:unstructured"
                                                granite:class="modalpopup-showhide-target"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                  <imagepretitle
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
		                                                fieldDescription="A pretitle that will be displayed above the Image"
		                                                fieldLabel="Image Pretitle"
		                                                name="./imagePreTitle"/>
		                                         </items>
		                                         <granite:data
							                        jcr:primaryType="nt:unstructured"							                        
							                        showhidetargetvalue="default"
							                        showhidetargetvalue1="elifeContext"/>
		                                     </pretitle>
		                                     <titleGroup                                               
                                                jcr:primaryType="nt:unstructured"                                                
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                   <title
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
		                                                fieldDescription="A title to display as the headline for the Modal."
		                                                fieldLabel="Title"
		                                                name="./title"/>
		                                            <titleType
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
		                                                fieldLabel="Title Type"
		                                                name="./titleType">
		                                                <items jcr:primaryType="nt:unstructured">
		                                                    <def
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="(default)"
		                                                        value=""/>
		                                                    <h1
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="H1"
		                                                        value="h1"/>
		                                                    <h2
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="H2"
		                                                        value="h2"/>
		                                                    <h3
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="H3"
		                                                        value="h3"/>
		                                                    <h4
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="H4"
		                                                        value="h4"/>
		                                                    <h5
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="H5"
		                                                        value="h5"/>
		                                                    <h6
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="H6"
		                                                        value="h6"/>
                                                        </items>
                                                   </titleType>
                                                </items>
                                              </titleGroup>
                                              <modalDescription                                              
	                                              jcr:primaryType="nt:unstructured"
	                                              granite:class="modalpopup-showhide-target"
	                                              sling:resourceType="granite/ui/components/coral/foundation/container">
	                                              <items jcr:primaryType="nt:unstructured">
	                                                 <description
		                                                jcr:primaryType="nt:unstructured"
														sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
		                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
		                                                fieldDescription="Text that will appear for the main Description."
		                                                fieldLabel="PopUp Text"
		                                                name="./desc"
		                                                useFixedInlineToolbar="{Boolean}true"/>
	                                              </items>
	                                              <granite:data
							                        jcr:primaryType="nt:unstructured"							                        
							                        showhidetargetvalue="default"
							                        showhidetargetvalue1="elifeContext"/>
	                                          </modalDescription>	
	                                          <notificationGroup                                              
	                                              jcr:primaryType="nt:unstructured"
	                                              granite:class="modalpopup-showhide-target"
	                                              sling:resourceType="granite/ui/components/coral/foundation/container">
	                                              <items jcr:primaryType="nt:unstructured">
	                                                 <notificationdata
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Notification Item(s)">
                                                        <field
                                                            granite:class="coral-Well"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./notificationItems">
                                                            <items jcr:primaryType="nt:unstructured">
                                                               <notificationdate
		                                                        jcr:primaryType="nt:unstructured"
		                                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
		                                                        fieldDescription="Select Notification Date"
		                                                        required="{Boolean}true"
		                                                        fieldLabel="Notification Date"
		                                                        name="./notificationDate"/>
		                                                     <title
		                                                         jcr:primaryType="nt:unstructured"
		                                                         sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
		                                                         fieldDescription="A title to display for single notification ."
		                                                         fieldLabel="Notification Title"
		                                                         maxlength="{Long}150"
		                                                         name="./notificationTitle"
		                                                         required="{Boolean}true"/>
		                                                     <text
		                                                         jcr:primaryType="nt:unstructured"
		                                                         sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
		                                                         sling:resourceType="cq/gui/components/authoring/dialog/richtext"
		                                                         fieldDescription="A description to display for single notification."
		                                                         useFixedInlineToolbar="{Boolean}true"
		                                                         fieldLabel="Description"
		                                                         name="./notificationText"/>
		                                                      <notificationctatitle
			                                                      jcr:primaryType="nt:unstructured"
			                                                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
			                                                      fieldDescription="Enter Notification CTA Title"
			                                                      fieldLabel="Notification CTA Title"
			                                                      name="./notificationCTATitle"/>
			                                                  <notificationctalink
			                                                      jcr:primaryType="nt:unstructured"
			                                                      sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
			                                                      fieldDescription="Enter Notification CTA Link."
			                                                      fieldLabel="Notification CTA Link"
			                                                      name="./notificationLinkURL"
			                                                      rootPath="/content"/>
			                                                  <notificationlinktarget
			                                                     jcr:primaryType="nt:unstructured"
			                                                     sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
			                                                     checked="{Boolean}false"
			                                                     fieldDescription="If checked, the URL will open in new tab."
			                                                     fieldLabel="Open in new tab"
			                                                     name="./notificationLinktarget"
			                                                     text="Open in new tab"
			                                                     uncheckedValue="false"
			                                                     value="true"/>           
                                                            </items>
                                                         </field>
                                                       </notificationdata>	                                                                                               
	                                              </items>
	                                              <granite:data
							                        jcr:primaryType="nt:unstructured"							                        
							                        showhidetargetvalue="digital-notification"/>
	                                          </notificationGroup>			                                            	                                            	                                                                                        
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </modaldetails>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
