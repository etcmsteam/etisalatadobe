<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    margin="{Boolean}true"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
      <columns
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
          margin="{Boolean}true">
          <items jcr:primaryType="nt:unstructured">
              <column
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/container">
                  <items jcr:primaryType="nt:unstructured">
                      <heroalignment
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/select"
                          fieldDescription="Hero Banner Alignment"
                          fieldLabel="Hero Banner Alignment"
                          name="./heroAlignment">
                          <items jcr:primaryType="nt:unstructured">
                              <left
                                  jcr:primaryType="nt:unstructured"
                                  text="Left"
                                  value="slide-left"/>
                              <right
                                  jcr:primaryType="nt:unstructured"
                                  text="Right"
                                  value="slide-right"/>
                              <center
                                  jcr:primaryType="nt:unstructured"
                                  text="Center"
                                  value="slide-center"/>
                          </items>
                      </heroalignment>
                      <taglinegroup
                          jcr:primaryType="nt:unstructured"
                          jcr:title="Tagline Details"
                          sling:resourceType="granite/ui/components/foundation/layouts/collapsible">
                          <items jcr:primaryType="nt:unstructured">
                              <tagtitle
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                  fieldDescription="A tagline that will be displayed above the Herobanner's title."
                                  fieldLabel="Tagline Text"
                                  name="./pretitle"/>
                              <tagcolor
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                  fieldDescription="Tagline Background color"
                                  fieldLabel="Tagline background color"
                                  name="./tagColor">
                                  <items jcr:primaryType="nt:unstructured">
                                      <orange
                                          jcr:primaryType="nt:unstructured"
                                          text="Orange"
                                          value="bg-orange"/>
                                      <teal
                                          jcr:primaryType="nt:unstructured"
                                          text="Teal"
                                          value="bg-teal"/>
                                      <green
                                          jcr:primaryType="nt:unstructured"
                                          text="Green"
                                          value="bg-green"/>
                                      <violet
                                          jcr:primaryType="nt:unstructured"
                                          text="Violet"
                                          value="bg-violet"/>
                                      <golden
                                          jcr:primaryType="nt:unstructured"
                                          text="Golden"
                                          value="bg-golden"/>
                                      <silver
                                          jcr:primaryType="nt:unstructured"
                                          text="Silver"
                                          value="bg-silver"/>
                                  </items>
                              </tagcolor>
                              <tagalignment
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                  fieldDescription="Tagline alignment"
                                  fieldLabel="Tagline alignment"
                                  name="./tagAlignment">
                                  <items jcr:primaryType="nt:unstructured">
                                      <beforetitle
                                          jcr:primaryType="nt:unstructured"
                                          text="Before Title"
                                          value="beforetitle"/>
                                      <aftertitle
                                          jcr:primaryType="nt:unstructured"
                                          text="After Title"
                                          value="aftertitle"/>
                                  </items>
                              </tagalignment>
                              <file
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                  allowUpload="{Boolean}false"
                                  autoStart="{Boolean}false"
                                  class="cq-droptarget"
                                  fieldLabel="Tagline Image Asset"
                                  fileNameParameter="./tagline/fileName"
                                  fileReferenceParameter="./tagline/fileReference"
                                  mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                  multiple="{Boolean}false"
                                  name="./tagline/file"
                                  title="Upload Speed Image Asset"
                                  uploadUrl="${suffix.path}"
                                  useHTML5="{Boolean}true"/>
                          </items>
                      </taglinegroup>
                      <titleGroup
                          jcr:primaryType="nt:unstructured"
                          jcr:title="Title and Description"
                          sling:resourceType="granite/ui/components/foundation/layouts/collapsible">
                          <items jcr:primaryType="nt:unstructured">
                              <title
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                  fieldDescription="A title to display as the headline for the herobanner."
                                  fieldLabel="Title"
                                  name="./heroTitle"/>
                              <titlefonttype
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                  fieldLabel="Title Font Style"
                                  name="./titleFontStyle">
                                  <items jcr:primaryType="nt:unstructured">
                                      <long
                                          jcr:primaryType="nt:unstructured"
                                          text="Long"
                                          value="long"/>
                                      <short
                                          jcr:primaryType="nt:unstructured"
                                          text="Short"
                                          value="short"/>                                                            
                                  </items>
                              </titlefonttype>
                              <description
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
                                  sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                  fieldDescription="A description to display as the subheadline for the teaser."
                                  fieldLabel="Description"
                                  name="./jcr:description"
                                  useFixedInlineToolbar="{Boolean}true"/>
                          </items>
                      </titleGroup>
                      <id
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="HTML ID attribute to apply to the component."
                          fieldLabel="ID"
                          name="./id"/>
                  </items>
              </column>
          </items>
      </columns>
  </items>
</jcr:root>
