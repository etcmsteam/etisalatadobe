<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Promo Tile"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <promotilevariations
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select Promo Tile variation"
                                                fieldLabel="Select Promo Tile variation"
                                                name="./promoTilevariation">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <textonly
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Text only"
                                                        value="textonly"/>
                                                    <twocol
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Two Column"
                                                        value="twocol"/>
                                                    <videowithbg
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Video with BG Image"
                                                        value="videowithbg"/>
                                                    <textwithbgimg
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Text with BG Image"
                                                        value="textwithbgimg"/>
                                                    <withgradientandbgcolor
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Text with Gradient and BG Color"
                                                        value="withgradientpurplebg"/>
                                                    <withsolidbg
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Text with Solid BG"
                                                        value="withsolidbg"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".linkbehavior-showhide-target"/>
                                            </promotilevariations>
                                            <twocol
                                                granite:class="linkbehavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <twocolvariations
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Two Col Variations"
                                                        fieldLabel="Select Two Column Variation"
                                                        name="./twoColVariation">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <twocolsleftright
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Two Col Left Right"
                                                                value="two-cols-left-right"/>
															<twocolsleftrightflipped
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Two Col Left Right Flipped"
                                                                value="two-cols-left-right flipped"/>
                                                            <twocolsleftrightsmall
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Two Cols Left Right Small"
                                                                value="two-cols-left-right small"/>
                                                            <twocolsleftrightsmallflipped
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Two Cols Left Right Small Flipped"
                                                                value="two-cols-left-right small flipped"/>
                                                            <twocolsupdown
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Two Cols Up Down"
                                                                value="two-cols-up-down"/>
                                                        </items>
                                                    </twocolvariations>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="twocol"/>
                                            </twocol>
                                            <videowithbg
                                                granite:class="linkbehavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <youtube
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                        fieldDescription="Enter the video embed URL."
                                                        fieldLabel="Youtube Video Embed URL"
                                                        name="./youTubeUrl"/>
                                                    <play-inplace
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <granite:data jcr:primaryType="nt:unstructured"/>
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <playicon
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                allowUpload="{Boolean}false"
                                                                autoStart="{Boolean}false"
                                                                class="cq-droptarget"
                                                                fieldDescription="Drag &amp; drop the play icon image."
                                                                fieldLabel="Play Icon"
                                                                fileNameParameter="./playIconName"
                                                                fileReferenceParameter="./playIconReference"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                multiple="{Boolean}false"
                                                                name="./playIcon"
                                                                title="Upload Image Asset"
                                                                uploadUrl="${suffix.path}"
                                                                useHTML5="{Boolean}true"/>
                                                        </items>
                                                    </play-inplace>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="videowithbg"/>
                                            </videowithbg>
                                            <withgradientandbgcolor
                                                granite:class="linkbehavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
												    <bgcolor
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select the background color"
                                                        fieldLabel="Select the background color"
                                                        name="./gradientBgColor">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <purple
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Purple"
                                                                value="gr-purple"/>
                                                            <green
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Green"
                                                                value="gr-green"/>
                                                            <orange
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Orange"
                                                                value="gr-orange"/>
                                                            <aqua
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Aqua"
                                                                value="gr-aqua"/>
                                                        </items>
                                                    </bgcolor>
                                                    <thumbnail-inplace
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <granite:data jcr:primaryType="nt:unstructured"/>
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <thumbnailicon
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                allowUpload="{Boolean}false"
                                                                autoStart="{Boolean}false"
                                                                class="cq-droptarget"
                                                                fieldDescription="Drag &amp; drop the Thumbnail icon image."
                                                                fieldLabel="Thumbnail icon"
                                                                fileNameParameter="./thumbnailIconName"
                                                                fileReferenceParameter="./thumbnailIconReference"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                multiple="{Boolean}false"
                                                                name="./thumbnailIcon"
                                                                title="Upload Image Asset"
                                                                uploadUrl="${suffix.path}"
                                                                useHTML5="{Boolean}true"/>
                                                        </items>
                                                    </thumbnail-inplace>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="withgradientpurplebg"/>
                                            </withgradientandbgcolor>
											<withsolidbg
                                                granite:class="linkbehavior-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <bgcolor
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select the background color"
                                                        fieldLabel="Select the background color"
                                                        name="./withSolidBgColor">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <green
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Green"
                                                                value=""/>
                                                            <sand
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Light Sand"
                                                                value="light-sand"/>
                                                            <orange
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Orange"
                                                                value="dark-orange"/>
                                                            <red
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Red"
                                                                value="error-red"/>
                                                            <yellow
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Yellow"
                                                                value="yellow"/>
                                                        </items>
                                                    </bgcolor>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="withsolidbg"/>
                                            </withsolidbg>
                                            <titleGroup
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Title and Description"
                                                sling:resourceType="granite/ui/components/foundation/layouts/collapsible">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <pretitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="A PreTitle  for Promo Card"
                                                        fieldLabel="PreTitle"
                                                        name="./promopretitle"/>
                                                    <title
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="A title to display as the headline for the Promo card"
                                                        fieldLabel="Title"
                                                        name="./promotitle"/>
                                                    <description
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                        fieldDescription="A description to display as the subheadline for the Promo card"
                                                        fieldLabel="Description"
                                                        name="./jcr:description"
                                                        useFixedInlineToolbar="{Boolean}true"/>
                                                </items>
                                            </titleGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <promoactions
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Link &amp; Actions"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <promoCTAGroup
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Call-To-Action"
                                                sling:resourceType="granite/ui/components/foundation/layouts/collapsible">
                                                <items jcr:primaryType="nt:unstructured">
												    <ctaStyle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                                        path="etisalat/components/commons/cta-variations/ctaStyle"/>
                                                    <promobannerctatitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter Promo Banner CTA Title"
                                                        fieldLabel="Promo Tile CTA Title"
                                                        name="./promoCTATitle"/>
                                                    <actionbehaviour
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <linkbehavior
                                                                granite:class="cq-dialog-dropdown-showhide"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                fieldDescription="Select Tile Link Behavior"
                                                                fieldLabel="Link Behavior"
                                                                name="./linkBehavior">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <opennewwindow
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Open In New Window"
                                                                        value="opennewwindow"/>
                                                                    <opensamewindow
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Open in Same Window"
                                                                        value="opensamewindow"/>
                                                                    <linkmodalpopup
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Open CTA Link in Modal window"
                                                                        value="openmodalwindow"/>
                                                                </items>
                                                                <granite:data
                                                                    jcr:primaryType="nt:unstructured"
                                                                    cq-dialog-dropdown-showhide-target=".promotilelinkbehavior-showhide-target"/>
                                                            </linkbehavior>
                                                            <promotilelinkwindow
                                                                granite:class="promotilelinkbehavior-showhide-target"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <cardlink
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                        fieldDescription="Promo card cta link"
                                                                        fieldLabel="Promo Tile CTA Link"
                                                                        name="./cardLink"
                                                                        rootPath="/content"/>
                                                                </items>
                                                                <granite:data
                                                                    jcr:primaryType="nt:unstructured"
                                                                    showhidetargetvalue="opensamewindow"
                                                                    showhidetargetvalue1="opennewwindow"/>
                                                            </promotilelinkwindow>
                                                        </items>
                                                    </actionbehaviour>
													<fragmentlink
                                                        granite:class="promotilelinkbehavior-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <fragmentVariationPath
                                                                granite:id="xfPicker"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/experience-fragments/editor/components/xffield"
                                                                fieldDescription="Choose the experience fragment variation to display."
                                                                fieldLabel="Experience Fragment Variation Path"
                                                                filter="folderOrVariant"
                                                                name="./fragmentVariationPath"
                                                                propertyFilter="cq:xfShowInEditor"
                                                                variant="web"/>
                                                            <modalBehavior
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="etisalat/components/commons/modal-popup-variations/modalBehavior"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                fieldDescription="Select Popup Behavior"
                                                                fieldLabel="Popup Behavior"
                                                                name="./modalBehavior"/>
                                                        </items>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="openmodalwindow"/>
                                                    </fragmentlink>
                                                </items>
                                            </promoCTAGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </promoactions>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
