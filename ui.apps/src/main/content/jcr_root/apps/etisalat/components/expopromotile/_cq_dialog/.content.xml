<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Expo Promo Tile"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <promotilevariations
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Choose Expo Promo Tile variation"
                                                fieldLabel="Select Expo Promo Tile variation"
                                                name="./expoPromoTilevariation">
                                                <items jcr:primaryType="nt:unstructured">                                                                                                      
                                                    <small
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Small Tile"
                                                        value="small"/>
                                                    <large
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Large Tile"
                                                        value="large"/>  
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".linkbehavior-showhide-target"/>
                                            </promotilevariations>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="A title to display as the headline for the Expo Promo card"
                                                fieldLabel="Title"
                                                name="./expoPromoTitle"/>
                                            <titleType
                                                jcr:primaryType="nt:unstructured"												
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Style for Title"
                                                name="./titleType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <def
                                                        jcr:primaryType="nt:unstructured"
                                                        text="(default)"
                                                        value=""/>
                                                    <h1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H1"
                                                        value="h1"/>
                                                    <h2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H2"
                                                        value="h2"/>
                                                    <h3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H3"
                                                        value="h3"/>
                                                    <h4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H4"
                                                        value="h4"/>
                                                    <h5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H5"
                                                        value="h5"/>
                                                    <h6
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H6"
                                                        value="h6"/>
                                                </items>
                                            </titleType>
                                            <promobannerctatitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter Expo Promo Banner CTA Title"
                                                fieldLabel="Expo Promo CTA Title"
                                                name="./expoPromoCTATitle"/>
	                                        <contentBackGroup
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Content Back Details"
                                                sling:resourceType="granite/ui/components/foundation/layouts/collapsible">
                                                <items jcr:primaryType="nt:unstructured">
                                                     <text
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceSuperType="etisalat/components/commons/editor/dialog/rteconfig/text"
		                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
		                                                fieldDescription="Content Back Text"
		                                                fieldLabel="Content Back Text"
		                                                name="./text"
		                                                useFixedInlineToolbar="{Boolean}true"/>
                                                    <tilelinklabel
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
		                                                emptyText="Text"
		                                                fieldDescription="Enter Content Back CTA Label"
		                                                fieldLabel="Content Back CTA Label"
		                                                name="./ctatext"/>
		                                            <tileLinkBehavior
		                                                granite:class="cq-dialog-dropdown-showhide"
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
		                                                fieldDescription="Select Expo Promo Tile Link Behavior"
		                                                fieldLabel="Tile Link Behavior"
		                                                name="./tileLinkBehavior">
		                                                <items jcr:primaryType="nt:unstructured">
		                                                    <opennewwindow
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="Open In New Window"
		                                                        value="opennewwindow"/>
		                                                    <opensamewindow
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="Open in Same Window"
		                                                        value="opensamewindow"/>
		                                                    <linkmodalpopup
		                                                        jcr:primaryType="nt:unstructured"
		                                                        text="Open CTA Link in Modal window"
		                                                        value="openmodalwindow"/>		                                                  
		                                                </items>
		                                                <granite:data
		                                                    jcr:primaryType="nt:unstructured"
		                                                    cq-dialog-dropdown-showhide-target=".linkbehavior-showhide-target"/>
		                                            </tileLinkBehavior>
		                                            <fragmentlink
		                                                granite:class="linkbehavior-showhide-target"
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/container">
		                                                <items jcr:primaryType="nt:unstructured">
		                                                    <fragmentVariationPath
		                                                        granite:id="xfPicker"
		                                                        jcr:primaryType="nt:unstructured"
		                                                        sling:resourceType="cq/experience-fragments/editor/components/xffield"
		                                                        fieldDescription="Choose the experience fragment variation to display."
		                                                        fieldLabel="Experience Fragment Variation Path"
		                                                        filter="folderOrVariant"
		                                                        name="./fragmentVariationPath"
		                                                        propertyFilter="cq:xfShowInEditor"
		                                                        variant="web"/>		                                                    
		                                                </items>
		                                                <granite:data
		                                                    jcr:primaryType="nt:unstructured"
		                                                    showhidetargetvalue="openmodalwindow"/>
		                                            </fragmentlink>
		                                            <tilelinksamewindow
		                                                granite:class="linkbehavior-showhide-target"
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/coral/foundation/container">
		                                                <items jcr:primaryType="nt:unstructured">
		                                                    <tilebuttonlink
		                                                        jcr:primaryType="nt:unstructured"
		                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
		                                                        fieldDescription="Target URL for when the link is clicked."
		                                                        fieldLabel="Content Back CTA Label link"
		                                                        name="./tileCTALinkSameWindow"
		                                                        rootPath="/content"/>		                                                    
		                                                </items>
		                                                <granite:data
		                                                    jcr:primaryType="nt:unstructured"
		                                                    showhidetargetvalue="opensamewindow"
		                                                    showhidetargetvalue1="opennewwindow"/>
		                                            </tilelinksamewindow>
                                                </items>
                                            </contentBackGroup>	                                                                               
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>                    
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
